<% content_for :title, t('auth.login') %>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-50 to-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="rounded-sm border bg-white text-gray-900 shadow-2xl overflow-hidden">
      <div class="flex flex-col space-y-1.5 p-8 text-center bg-gray-900 text-white">
        <div class="mx-auto mb-4">
          <%= image_tag "icon.svg", alt: t('site.name'), class: "h-12 w-12 text-white" if image_url("icon.svg") rescue nil %>
        </div>
        <h3 class="text-2xl font-bold tracking-tight">
          <%= t('auth.login') %>
        </h3>
        <p class="text-gray-100 mt-2"><%= t('auth.login_subtitle') %></p>
      </div>
      
      <div class="p-8">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
          <%= render "devise/shared/error_messages", local: { resource: resource } %>
          <div>
            <%= f.label :email, t('auth.email'), class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                </svg>
              </div>
              <%= f.email_field :email, 
                placeholder: t('auth.email_placeholder'),
                required: true,
                autofocus: true,
                autocomplete: "email",
                value: resource.email,
                class: "pl-10 w-full px-4 py-3 border border-gray-300 rounded-sm focus:ring-2 focus:ring-gray-500 focus:border-gray-500 transition duration-200 text-gray-900 placeholder-gray-500" %>
            </div>
          </div>

          <div>
            <%= f.label :password, t('auth.password'), class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
              </div>
              <%= f.password_field :password,
                placeholder: t('auth.password_placeholder'),
                required: true,
                autocomplete: "current-password",
                class: "pl-10 w-full px-4 py-3 border border-gray-300 rounded-sm focus:ring-2 focus:ring-gray-500 focus:border-gray-500 transition duration-200 text-gray-900 placeholder-gray-500" %>
            </div>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <%= f.check_box :remember_me, class: "h-4 w-4 text-gray-600 focus:ring-gray-500 border-gray-300 rounded transition duration-200" %>
                <%= f.label :remember_me, t('auth.remember_me'), class: "ml-2 block text-sm text-gray-700 font-medium" %>
              </div>
              <% if devise_mapping.recoverable? %>
                <%= link_to t('auth.forgot_password'), new_password_path(resource_name), 
                    class: "text-sm text-gray-600 hover:text-gray-800 font-medium transition duration-200" %>
              <% end %>
            </div>
          <% end %>

          <div>
            <%= f.submit t('auth.login'), 
                class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
      
      <div class="px-8 py-6 bg-gray-50 border-t border-gray-200 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
    
    <div class="text-center text-sm text-gray-600">
      <%= t('site.copyright') %>
    </div>
  </div>
</div>
    </div>
  </div>
</div>
