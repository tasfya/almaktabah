<%- if controller_name != 'sessions' %>
  <%= link_to t('auth.login'), new_session_path(resource_name), 
      class: "btn btn-link btn-sm" %>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('auth.forgot_password'), new_password_path(resource_name), 
      class: "btn btn-link btn-sm" %>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('auth.no_confirmation_received'), new_confirmation_path(resource_name), 
      class: "btn btn-link btn-sm" %>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('auth.no_unlock_received'), new_unlock_path(resource_name), 
      class: "btn btn-link btn-sm" %>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "تسجيل الدخول عبر #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), 
        data: { turbo: false }, 
        class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition duration-200" %>
  <% end %>
<% end %>
