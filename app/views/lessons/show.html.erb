<% content_for :title, "#{@lesson.series_title}- #{@lesson.title}" %>
<div class="bg-gray-50 min-h-screen py-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <div class="lg:col-span-2">
        <article class="bg-white rounded-lg shadow-md p-8">
          <header class="mb-8">
            <% if @lesson.video? || @lesson.audio? %>
              <section class="mb-8">
                <% if @lesson.video? %>
                  <video controls class="w-full rounded">
                    <source src="<%= @lesson.video_url %>" type="video/mp4">
                    <%= t('common.browser_no_support_video') %>
                  </video>
                <% elsif @lesson.audio? %>
                  <div class="relative w-full overflow-hidden rounded-lg shadow-sm mx-auto">
                    <div class="aspect-video bg-gray-200 relative flex items-center justify-center">
                      <%= image_tag "background.jpg", class: "absolute inset-0 w-full h-full object-cover" %>
                      <%= audio_play_button_with_text(@lesson.audio_url, @lesson.title, @lesson.description, '', '', class: "btn btn-secondary w-fit z-10 bg-black/70 hover:bg-black/90 text-white", svg_class: "size-12") %>
                    </div>
                  </div>
                <% end %>
              </section>
            <% end %>
            <h1 class="text-3xl font-bold text-gray-900 mb-4">
              <%= @lesson.title %>
            </h1>
            <% if @lesson.series.present? %>
              <div class="mb-4">
                <%= link_to @lesson.series.title, series_path(@lesson.series), class: "text-gray-800 hover:text-gray-900 font-medium" %>
              </div>
            <% end %>
            <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600 mb-6">
              <% if @lesson.category.present? %>
                <span class="badge badge-primary">
                  <%= @lesson.category %>
                </span>
              <% end %>
              <% if  false %>
                <time><%= @lesson.published_date.strftime("%Y/%m/%d") %></time>
                <span><%= @lesson.view_count %> <%= t('common.view_count', count: @lesson.view_count) %></span>
              <% end %>
            </div>
          </header>
          <% if @lesson.respond_to?(:content) && @lesson.content.present? %>
            <section class="mb-8">
              <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('.lesson_content') %></h2>
              <div class="prose prose-lg max-w-none">
                <%= @lesson.content %>
              </div>
            </section>
          <% elsif false && @lesson.description.present? %>
            <section class="mb-8">
              <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('.lesson_description') %></h2>
              <div class="prose prose-lg max-w-none">
                <%= simple_format(@lesson.description) %>
              </div>
            </section>
          <% end %>
          <% if @lesson.audio? || @lesson.video? %>
            <section class="mb-8">
              <div class="bg-gray-50 rounded-lg p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4"><%= t('.download_options') %></h3>
                <div class="flex flex-wrap gap-4">
                  <% if @lesson.audio? %>
                    <%= link_to rails_blob_url(@lesson.audio, disposition: "attachment"), download: true, target: "_blank", class: "btn btn-primary w-fit" do %>
                      <%= icon "arrow-down-tray", class: "size-5" %>
                       <%= t('buttons.download_audio') %>
                    <% end %>
                  <% end %>
                  <% if @lesson.video? %>
                    <%= link_to rails_blob_url(@lesson.video, disposition: "attachment"), download: true, target: "_blank", class: "btn btn-primary w-fit" do %>
                      <%= icon "arrow-down-tray", class: "size-5" %>
                      <%= t('buttons.download_video') %>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </section>
          <% end %>
          <% if @lesson.series.present? %>
            <section class="mb-8">
              <div class="flex items-center justify-between mb-4">
                <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('.other_series_lessons') %></h2>
                <% if @lesson.series.lessons.count > 5 %>
                  <div class="mt-4">
                    <%= link_to series_path(@lesson.series), class: "btn btn-link" do %>
                      <%= t('buttons.view_all_lessons') %>                       
                      <%= icon "arrow-left", class:"size-4" %>
                    <% end %>
                  </div>
                <% end %>
              </div>
              <div class="space-y-3">
                <% @lesson.series.lessons.recent.limit(5).each do |series_lesson| %>
                  <div class="<%= 'bg-gray-50 border-gray-200' if series_lesson == @lesson %> border rounded-lg p-4 hover:shadow-md transition-shadow">
                    <div class="flex items-center justify-between">
                      <div class="flex-1">
                        <h3 class="font-medium <%= 'text-gray-900' if series_lesson == @lesson %>">
                          <% if series_lesson == @lesson %>
                            <%= series_lesson.title %> (<%= t('.current_lesson') %>)
                          <% else %>
                            <%= link_to series_lesson.title, lesson_path(series_lesson), class: "hover:text-gray-600" %>
                          <% end %>
                        </h3>
                        <div class="flex items-center gap-3 text-sm text-gray-500 mt-1">
                          <% if false  %>
                            <span><%= series_lesson.duration %> <%= t('common.duration_minutes') %></span>
                            <span><%= series_lesson.published_date.strftime("%Y/%m/%d") %></span>
                          <% end %>
                        </div>
                      </div>
                      <% unless series_lesson == @lesson %>
                        <div class="flex items-center gap-2">
                          <%= audio_play_button_with_text(series_lesson.audio_url, series_lesson.title, series_lesson.description, '', t('buttons.listen'), class: "btn btn-secondary w-fit") if series_lesson.audio?  %>
                          <%= link_to lesson_path(series_lesson), class: "btn btn-primary gap-2" do %>
                            <%= icon "eye", class: "size-5" %>
                            <%= t('buttons.read') %>
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </section>
          <% end %>
        </article>
      </div>
      <!-- Sidebar -->
      <%= render partial: "shared/side_bar" %>
    </div>
  </div>
</div>
