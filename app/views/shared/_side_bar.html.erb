<div class="lg:col-span-1 max-w-md mx-auto p-6">
  <div class="text-center mb-12 border shadow-sm rounded-sm  p-6 bg-white">
    <div class="flex items-center justify-center mb-6">
      <img src="<%= asset_path('logo.png') %>" alt="<%= t('site.name') %> Logo" width="500" height="150" class="rounded-full " />
    </div>
    <h1 class="text-2xl font-bold mb-4 sr-only">
      <%= t('site.name') %>
    </h1>
    <div class="flex flex-wrap items-center justify-center gap-2">
      <%= link_to about_path, class: "btn btn-primary w-fit" do %>
        <%= t('buttons.about')%>
        <%= icon "arrow-top-right-on-square", class: "size-5"%>
      <% end %>
    </div>
    <div class="flex items-center justify-center mt-6">
      <%= link_to site_info[:youtube_url], class: "btn btn-link btn-sm" do %>
        <%= icon "youtube", library: "lucide", class: "size-5"%>
      <% end %>
      <%= link_to site_info[:twitter_url], class: "btn btn-link btn-sm" do %>
        <%= icon "twitter", library: "lucide", class: "size-5"%>
      <% end %>
    </div>
  </div>
  <div class="bg-white shadow-md p-6 mb-6">
    <h3 class="text-xl font-bold text-gray-900 mb-4">
      Placeholder
    </h3>
    <div class="space-y-4">
      placeholder
    </div>
  </div>

  <div class="bg-white shadow-md p-6 mb-6">
    <h3 class="text-xl font-bold text-gray-900 mb-4">
      placeholder
    </h3>
    <div class="space-y-4">
      placeholder
    </div>
  </div>
</div>
