<div id="audio-player-container" class="fixed inset-x-0 bottom-0 z-50" data-turbo-permanent>
  <div id="audio-player" class="empty:hidden">
    <!-- Audio player content will be rendered here via turbo streams -->
  </div>
  <!-- Loading template -->
  <template data-play-button-target="loadingTemplate">
    <div class="bg-white border-t border-base-300 shadow-lg p-4">
      <div class="flex items-center justify-center space-x-3">
        <%= icon("arrow-path", class: "w-5 h-5 animate-spin") %>
        <span><%= t("buttons.loading_audio") %></span>
      </div>
    </div>
  </template>
</div>
