<footer class="bg-primary pb-16 sm:pb-0">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <div class="md:col-span-1">
        <div class="flex items-center gap-3 mb-4">
          <%= image_tag @logo_url, alt: t('site.name'), width: 400, height: 150, class: "rounded-full" %>
        </div>
        <p class="text-sm text-primary-content">
          <%= t('sheikh.description') %>
        </p>
      </div>
      <div>
        <h4 class="text-lg font-semibold text-primary-content mb-4"><%= t('navigation.quick_links') %></h4>
        <ul class="space-y-2">
          <li><%= link_to t('navigation.home'), root_path, class: "primary-link" %></li>
          <li><%= link_to t('navigation.books'), books_path, class: "primary-link" %></li>
          <li><%= link_to t('navigation.lectures'), lectures_path, class: "primary-link" %></li>
          <li><%= link_to t('navigation.series'), series_index_path, class: "primary-link" %></li>
        </ul>
      </div>
      <div>
        <h4 class="text-lg font-semibold text-primary-content mb-4"><%= t('navigation.content') %></h4>
        <ul class="space-y-2">
          <li><%= link_to t('navigation.recent_books'), books_path(recent: true), class: "primary-link" %></li>
          <li><%= link_to t('navigation.recent_lectures'), lectures_path(recent: true), class: "primary-link" %></li>
          <%# <li><%= link_to t('navigation.about_sheikh_alt'), about_path, class: "primary-link" %></li>
      </ul>
    </div>
    <div>
      <h4 class="text-lg font-semibold text-primary-content mb-4"><%= t('footer.contact_title') %></h4>
      <div class="mt-4 flex gap-4">
        <%= link_to site_info[:youtube_url], class: "btn btn-ghost btn-secondary btn-sm text-primary-content hover:text-secondary-content" do %>
          <%= icon "youtube", library: "lucide", class: "size-5" %>
        <% end %>
        <%= link_to site_info[:twitter_url], class: "btn btn-ghost btn-secondary btn-sm text-primary-content hover:text-secondary-content" do %>
          <%= icon "twitter", library: "lucide", class: "size-5" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="border-t border-base-300 mt-8 pt-8 text-center">
    <p class="text-sm text-primary-content">
      &copy; <%= Date.current.year %> <%= t('footer.copyright') %>
    </p>
  </div>
</div>
</footer>
