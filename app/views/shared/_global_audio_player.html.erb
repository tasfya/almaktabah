<div id="global-audio-player" 
     class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 shadow-lg z-50 hidden w-full"
     data-audio-player-target="playerContainer">
  <audio data-audio-player-target="audio" preload="metadata"></audio>
  <!-- Skeleton -->
  <div data-audio-player-target="skeleton" class="mx-auto px-4 py-3 w-full max-w-7xl">
    <div class="flex flex-col sm:flex-row sm:items-center justify-between w-full space-y-4 sm:space-y-0 rtl:space-x-reverse sm:space-x-4">
      <!-- Skeleton Track Info -->
      <div class="flex items-center gap-2 w-full sm:w-auto min-w-0">
        <div class="flex-shrink-0">
          <div class="w-12 h-12 rounded-lg bg-gray-200 animate-pulse"></div>
        </div>
        <div class="min-w-0 flex-1">
          <div class="h-6 bg-gray-200 rounded mb-1 max-w-[160px] animate-pulse"></div>
          <div class="h-4 bg-gray-200 rounded max-w-[100px] animate-pulse hidden sm:block"></div>
        </div>
      </div>
      <!-- Skeleton Player Controls -->
      <div class="flex flex-col sm:items-center justify-center sm:justify-start gap-3 w-full max-w-md mx-auto">
        <div class="flex items-center gap-2">
          <div class="w-10 h-10 bg-gray-200 rounded-md animate-pulse"></div>
          <div class="w-10 h-10 bg-gray-200 rounded-md animate-pulse"></div>
          <div class="w-10 h-10 bg-gray-200 rounded-md animate-pulse"></div>
        </div>
        <div class="flex items-center gap-3 w-full min-w-0">
          <div class="w-10 h-4 bg-gray-200 rounded animate-pulse"></div>
          <div class="flex-1 h-2 bg-gray-200 rounded-full animate-pulse"></div>
          <div class="w-10 h-4 bg-gray-200 rounded animate-pulse"></div>
        </div>
      </div>
      <!-- Skeleton Additional Controls -->
      <div class="flex flex-wrap sm:flex-nowrap items-center justify-center sm:justify-start gap-2 w-full sm:w-auto">
        <div class="w-20 h-6 bg-gray-200 rounded animate-pulse"></div>
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 bg-gray-200 rounded-full animate-pulse"></div>
          <div class="w-16 h-4 bg-gray-200 rounded animate-pulse"></div>
          <div class="w-8 h-8 bg-gray-200 rounded-full animate-pulse"></div>
        </div>
        <div class="w-10 h-10 bg-gray-200 rounded-md animate-pulse"></div>
      </div>
    </div>
  </div>
  <!-- Actual Player -->
  <div data-audio-player-target="player" class="hidden mx-auto px-4 py-3 w-full max-w-7xl">
    <div class="flex flex-col sm:flex-row sm:items-center justify-between w-full space-y-4 sm:space-y-0 rtl:space-x-reverse sm:space-x-4">
      <!-- Track Info -->
      <div class="flex items-center gap-2 w-full sm:w-auto min-w-0">
        <div class="flex-shrink-0">
          <img data-audio-player-target="artwork" src="/icon.png" alt="<%= t('audio_player.track_artwork_alt') %>" class="w-12 h-12 rounded-lg object-cover bg-gray-100">
        </div>
        <div class="min-w-0 flex-1">
          <h4 data-audio-player-target="title" class="text-md font-semibold text-gray-900 truncate">
            <%= t('audio_player.select_audio_clip', default: 'اختر مقطع صوتي') %>
          </h4>
          <p data-audio-player-target="author" class="hidden sm:block text-xs text-gray-600 truncate">
            <%= t('audio_player.library', default: 'المكتبة') %>
          </p>
        </div>
      </div>
      <!-- Player Controls -->
      <div class="flex flex-col sm:items-center justify-center sm:justify-start gap-3 w-full max-w-md mx-auto">
        <!-- Play/Pause/Loop Buttons -->
        <div class="flex items-center gap-2">
          <button data-audio-player-target="playButton" data-action="click->audio-player#play" class="btn btn-secondary" aria-label="<%= t('audio_player.play') %>">
            <%= icon "play", class:"size-5" %>
          </button>
          <button data-audio-player-target="pauseButton" data-action="click->audio-player#pause" class="hidden btn btn-secondary" aria-label="<%= t('audio_player.pause') %>">
            <%= icon "pause", class:"size-5" %>
          </button>
          <button data-audio-player-target="loopButton" data-action="click->audio-player#toggleLoop" class="btn btn-secondary" title="<%= t('audio_player.toggle_loop') %>">
            <%= icon "repeat", library:"lucide", class:"size-5" %>
          </button>
        </div>
        <!-- Progress Bar -->
        <div class="flex items-center gap-3 w-full min-w-0">
          <span data-audio-player-target="duration" class="text-xs text-gray-500 font-mono min-w-max">0:00</span>
          <input type="range" min="0" max="100" value="0" step="0.1" dir="ltr"
                 data-audio-player-target="progress"
                 data-action="input->audio-player#onSeekInput change->audio-player#onSeekChange"
          class="w-full h-2 rounded-full cursor-pointer bg-gray-200 accent-gray-900">
          <span data-audio-player-target="time" class="text-xs text-gray-500 font-mono min-w-max">0:00</span>
        </div>
      </div>
      <!-- Additional Controls -->
      <div class="flex flex-wrap sm:flex-nowrap items-center justify-center sm:justify-start gap-2 w-full sm:w-auto">
        <!-- Speed Control -->
        <div class="flex items-center gap-1">
          <span class="text-xs text-gray-600 whitespace-nowrap"><%= t('audio_player.speed') %></span>
          <select data-audio-player-target="speedSelect" data-action="change->audio-player#setSpeed"
            class="text-xs border border-gray-300 rounded px-1 py-0.5 bg-white">
            <option value="0.5">0.5x</option>
            <option value="0.75">0.75x</option>
            <option value="1" selected>1x</option>
            <option value="1.25">1.25x</option>
            <option value="1.5">1.5x</option>
            <option value="1.75">1.75x</option>
            <option value="2">2x</option>
          </select>
        </div>
        <!-- Volume Control -->
        <div class="flex items-center gap-2">
          <button data-audio-player-target="volumeButton" data-action="click->audio-player#toggleMute"
            class="p-1 text-gray-600 hover:text-gray-900 transition-colors"
            title="<%= t('audio_player.mute_unmute') %>">
            <%= icon "speaker-wave", class:"size-5", data: { audio_player_target: "volumeOnIcon"} %>
            <%= icon "speaker-x-mark", class:"size-5 hidden", data: { audio_player_target: "volumeOffIcon"} %>
          </button>
          <input type="range" min="0" max="100" value="100" step="1" dir="ltr" data-audio-player-target="volumeSlider" class="w-16 h-1 rounded-full cursor-pointer bg-gray-200 accent-gray-600">
        </div>
        <!-- Close Button -->
        <button data-action="click->audio-player#stop" class="btn" aria-label="<%= t('audio_player.close') %>">
          <%= icon "x-mark", class:"size-5" %>
        </button>
      </div>
    </div>
  </div>
</div>
