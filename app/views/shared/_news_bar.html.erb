<div class="bg-gray-900 text-white px-3 py-2">
  <h3 class="flex items-center gap-2">
    <%= link_to news_index_path, class: "flex items-center gap-2 hover:text-gray-300" do %>
      <%= icon "megaphone", class: "size-5"%>
      <%= t('news_bar.latest_news') %>
    <% end %>
  </h3>
  <div class="space-y-4 flex items-center">
    <%# TODO: fix make it rotate %>
    <% false && @latest_news.each do |news| %>
      <div class="flex items-start gap-2">
        <span class="badge badge-primary badge-sm pt-1">
          <%= news.published_at.strftime("%d/%m/%Y") %>
        </span>
        <p class="text-sm text-gray-600 mb-3"><%= news.title %></p>
      </div>
    <% end %>
  </div>
</div>