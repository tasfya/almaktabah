<nav class="bg-breadcrumb text-breadcrumb-contrast  mb-6 bg-navbar rounded-lg shadow-sm border border-background-contrast p-3 md:p-4 breadcrumb-nav px-4 my-4" aria-label="breadcrumb" dir="rtl">
  <ol class="flex items-center space-x-2 rtl:space-x-reverse text-xs md:text-sm">
    <% current_breadcrumbs.each_with_index do |crumb, index| %>
      <% is_last = index == current_breadcrumbs.length - 1 %>
      <% is_current = crumb[:path].nil? %>

      <li class="flex items-center max-w-20 sm:max-w-32 md:max-w-none">
        <% if is_current || is_last %>
          <span class="text-primary-link font-semibold truncate"><%= crumb[:name] %></span>
        <% else %>
          <%= link_to crumb[:name], crumb[:path],
              class: "primary-link" %>
        <% end %>

        <% unless is_last %>
          <svg class="mx-2 md:mx-3 w-2 h-2 md:w-3 md:h-3 text-main-text rotate-180 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        <% end %>
      </li>
    <% end %>

    <% if local_assigns[:current_page] %>
      <li class="flex items-center max-w-20 sm:max-w-32 md:max-w-none cursor-pointer">
        <svg class="mx-2 md:mx-3 w-2 h-2 md:w-3 md:h-3 text-main-text rotate-180 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span class="text-secondary font-semibold truncate"><%= current_page %></span>
      </li>
    <% end %>
  </ol>
</nav>