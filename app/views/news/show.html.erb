<% content_for :title, @news.title %>
<div class="bg-background-subtle min-h-screen py-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 gap-8">
      <div class="lg:col-span-2">
        <article class="bg-background rounded-lg shadow-md p-8">
          <header class="mb-8">
            <h1 class="text-3xl font-bold text-foreground mb-4">
              <%= @news.title %>
            </h1>
            <div class="flex flex-wrap items-center gap-4 text-sm text-foreground mb-6">
              <% if false %>
                <time class="flex items-center gap-2 text-foreground">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  <%= @news.published_at.strftime("%Y/%m/%d - %H:%M") %>
                </time>
              <% end %>
            </div>
          </header>
          <% if @news.thumbnail.present? %>
            <section class="mb-8">
              <div class="rounded-lg overflow-hidden">
                <%= image_tag @news.thumbnail, class: "w-full h-auto", alt: @news.title %>
              </div>
            </section>
          <% end %>
          <section class="mb-8">
            <% if @news.content.present? %>
              <div class="prose prose-lg max-w-none leading-relaxed text-foreground">
                <%= @news.content %>
              </div>
            <% else %>
              <div class="text-foreground">
                <p>
                  <%= t(".will_be_available") %>
                </p>
              </div>
            <% end %>
          </section>
          <section class="mb-8">
            <div class="border-t border-background-subtle pt-6">
              <h3 class="text-lg font-semibold text-foreground mb-4">
                <%= t('.share_news') %>
              </h3>
              <div class="flex items-center gap-4">
                <a href="https://twitter.com/intent/tweet?text=<%= CGI.escape(@news.title) %>&url=<%= CGI.escape(request.original_url) %>"
                   target="_blank" rel="noopener"
                   class="btn btn-primary">
                  <%= icon "twitter", library: "lucide", class: "size-4"%>
                  <%= t("buttons.share_on_twitter")%>
                </a>
                <a href="https://www.facebook.com/sharer/sharer.php?u=<%= CGI.escape(request.original_url) %>"
                   target="_blank" rel="noopener"
                   class="btn btn-primary">
                  <%= icon "facebook", library: "lucide", class: "size-4"%>
                  <%= t("buttons.share_on_facebook")%>
                </a>
                <button data-controller="clipboard"
                        data-clipboard-text-value="<%= request.original_url %>"
                        data-clipboard-success-message-value="<%= t('common.copy_success') %>"
                        data-clipboard-error-message-value="<%= t('common.copy_error') %>"
                        data-action="click->clipboard#copy"
                        class="btn btn-secondary">
                  <%= icon "clipboard", class: "size-4" %>
                  <%= t("buttons.copy_link")%>
                </button>
              </div>
            </div>
          </section>
          <section class="mt-12">
            <h2 class="text-2xl font-bold text-foreground mb-6">
              <%= t('.related_news') %>
            </h2>
            <%
              # Get related news (latest news excluding current one)
              related_news = News.where.not(id: @news.id)
                                 .order(published_at: :desc)
                                 .limit(4)
            %>
            <% if related_news.any? %>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <% related_news.each do |related_item| %>
                  <div class="bg-background border border-background-subtle rounded-lg overflow-hidden hover:shadow-md transition-shadow">
                    <% if related_item.thumbnail.present? %>
                      <div class="h-48 overflow-hidden">
                        <%= image_tag related_item.thumbnail, class: "w-full h-full object-cover", alt: related_item.title %>
                      </div>
                    <% end %>
                    <div class="p-6">
                      <h3 class="text-lg font-semibold text-foreground mb-2">
                        <%= link_to related_item.title, news_path(related_item), class: "hover:text-primary-500" %>
                      </h3>
                      <% if related_item.content.present? %>
                        <p class="text-foreground text-sm mb-4">
                          <%= truncate(strip_tags(related_item.content.to_s), length: 100) %>
                        </p>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center text-foreground py-8">
                <p><%= t('common.no_related_items', items: t('activerecord.model_names.news')) %></p>
              </div>
            <% end %>
          </section>
        </article>
      </div>
      </div>
  </div>
</div>