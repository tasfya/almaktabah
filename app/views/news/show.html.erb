<% content_for :title, @news.title %>
<%= json_ld_tag(news_json_ld(@news)) %>

<div class="min-h-screen">
  <div class="container mx-auto px-4 max-w-4xl">
    <article class="bg-base-100 rounded-2xl shadow-xl overflow-hidden">
      <% if @news.thumbnail.present? %>
        <div class="w-full">
          <%= image_tag @news.thumbnail, class: "w-full h-auto max-h-[400px] object-cover", alt: @news.title %>
        </div>
      <% end %>

      <div class="p-8 lg:p-12">
        <header class="mb-10">
          <h1 class="text-3xl lg:text-4xl font-bold leading-tight">
            <%= @news.title %>
          </h1>
        </header>

        <div class="bg-base-200 rounded-xl p-6 mb-10">
          <div class="flex flex-wrap items-center gap-4">
            <button class="btn btn-secondary btn-sm"
                    data-controller="share-trigger"
                    data-share-trigger-modal-id-value="news_share_modal"
                    data-action="click->share-trigger#open">
              <%= icon "share", class: "size-4" %>
            </button>
          </div>
        </div>

        <section class="mb-10">
          <% if @news.content.present? %>
            <div class="bg-base-200 rounded-xl p-6">
              <div class="prose prose-lg max-w-none leading-relaxed">
                <%= @news.content %>
              </div>
            </div>
          <% else %>
            <div class="bg-base-200 rounded-xl p-6 text-base-content/60">
              <%= t(".will_be_available") %>
            </div>
          <% end %>
        </section>
      </div>
    </article>
  </div>
</div>

<%= render 'shared/share_modal',
    modal_id: 'news_share_modal',
    url: request.original_url,
    title: html_escape(@news.title),
    text: html_escape(@news.title) %>
