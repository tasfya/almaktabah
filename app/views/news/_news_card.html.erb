<article class="bg-white border border-gray-200 rounded-lg hover:shadow-lg transition-all duration-200 overflow-hidden group">
  <% if news_item.thumbnail.present? %>
    <div class="relative overflow-hidden">
      <%= image_tag news_item.thumbnail, class: "w-full h-48 object-cover group-hover:scale-105 transition-transform duration-200" %>
      <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-200"></div>
    </div>
  <% end %>
  <div class="p-4">
    <div class="flex items-center justify-between mb-2">
      <time class="text-xs text-gray-500">
        <%= news_item.created_at.strftime("%d %B %Y") %>
      </time>
    </div>
    <h3 class="hover:link mb-2">
      <%= link_to news_item.title, news_path(news_item), class: "block" %>
    </h3>
    <% if news_item.description.present? %>
      <p class="text-gray-600 text-sm mb-4 line-clamp-3"><%= truncate(news_item.description, length: 150) %></p>
    <% end %>
    <div class="flex items-center justify-between pt-3 border-t border-gray-100">
      <%= link_to news_path(news_item), class: "btn btn-link" do %>
        <%= t('common.read_more_arrow') %>
      <% end %>
    </div>
  </div>
</article>
