<div class="border border-gray-200 rounded-lg p-4 bg-white hover:shadow-md transition-shadow group">
  <div class="flex flex-col sm:flex-row mobile-gap">
    <% if news_item.thumbnail.present? %>
      <div class="w-full sm:w-20 h-32 sm:h-16 flex-shrink-0">
        <%= image_tag news_item.thumbnail, class: "w-full h-full object-cover rounded sm:rounded-md group-hover:scale-105 transition-transform duration-200" %>
      </div>
    <% end %>
    <div class="flex-1 min-w-0">
      <div class="flex items-start justify-between mb-2">
        <h3 class="font-medium text-sm sm:text-base mb-1 line-clamp-2 group-hover:text-blue-600 transition-colors duration-200">
          <%= link_to news_item.title, news_path(news_item), class: "block" %>
        </h3>
        <% if news_item.respond_to?(:category) && news_item.category.present? %>
          <span class="px-2 py-1 bg-blue-100 text-blue-800 text-xs rounded-full ml-2 flex-shrink-0">
            <%= news_item.category %>
          </span>
        <% end %>
      </div>
      <% if news_item.description.present? %>
        <p class="text-xs sm:text-sm text-gray-600 line-clamp-2 mb-2">
          <%= truncate(news_item.description, length: 80) %>
        </p>
      <% end %>
      <div class="flex items-center justify-between">
        <span class="text-xs text-gray-500">
          <%= time_ago_in_words(news_item.created_at) %>
        </span>
        <%= link_to news_path(news_item), class: "btn btn-outline btn-xs group-hover:btn-primary transition-colors duration-200" do %>
          <%= t('buttons.read_more') %>
        <% end %>
      </div>
    </div>
  </div>
</div>
