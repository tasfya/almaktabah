<footer class="bg-footer text-footer-contrast border-t border-background-contrast mt-8 sm:mt-16">
  <div class="container mx-auto px-4 py-6 sm:py-8 lg:py-12">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-8">
      <div class="lg:col-span-1">
        <div class="mb-6">
          <%= link_to root_path, class: "flex items-center gap-2 sm:gap-3 cursor-pointer mb-4" do %>
            <img src="<%= @logo_url %>" alt="<%= t('site.name') %> Logo" width="120" height="80" class="w-[80px] h-[50px] sm:w-[100px] sm:h-[60px] lg:w-[120px] lg:h-[60px] object-contain" />
          <% end %>
          <p class="text-footer-contrast text-sm sm:text-base leading-relaxed mb-4">
            <%= t('footer.about_description', default: 'منصة علمية شرعية تهدف إلى نشر العلم النافع والمحتوى الإسلامي الأصيل من خلال الدروس والمحاضرات والكتب النافعة.') %>
          </p>
          <div class="flex items-center gap-2 sm:gap-4 flex-wrap">
            <%= link_to site_info[:twitter_url], class: "text-footer-contrast hover:text-primary transition-colors p-2 rounded-lg hover:bg-background/10 min-h-[44px] min-w-[44px] flex items-center justify-center", target: "_blank", rel: "noopener" do %>
              <%= icon "twitter", library: "lucide", class: "size-5" %>
            <% end %>
            <%= link_to site_info[:youtube_url], class: "text-footer-contrast hover:text-primary transition-colors p-2 rounded-lg hover:bg-background/10 min-h-[44px] min-w-[44px] flex items-center justify-center", target: "_blank", rel: "noopener" do %>
              <%= icon "youtube", library: "lucide", class: "size-5" %>
            <% end %>
          </div>
        </div>
      </div>

      <%# Quick Links %>
      <div class="lg:col-span-1">
        <h3 class="text-base sm:text-lg font-semibold text-footer-contrast mb-4 sm:mb-6 flex items-center gap-2">
          <span><%= t('navigation.quick_links') %></span>
        </h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
          <ul class="space-y-2 text-sm">
            <li><%= link_to root_path, class: "text-footer-contrast hover:text-primary transition-colors flex items-center gap-2 py-2 px-1 rounded min-h-[44px]" do %>
              <%= icon "home", class: "size-4 flex-shrink-0" %>
              <span><%= t('navigation.home') %></span>
            <% end %></li>
            <li><%= link_to series_index_path, class: "text-footer-contrast hover:text-primary transition-colors flex items-center gap-2 py-2 px-1 rounded min-h-[44px]" do %>
              <%= icon "folder", class: "size-4 flex-shrink-0" %>
              <span><%= t('navigation.scientific_series') %></span>
            <% end %></li>
            <li><%= link_to lectures_path, class: "text-footer-contrast hover:text-primary transition-colors flex items-center gap-2 py-2 px-1 rounded min-h-[44px]" do %>
              <%= icon "microphone", class: "size-4 flex-shrink-0" %>
              <span><%= t('navigation.lectures') %></span>
            <% end %></li>
            <li><%= link_to books_path, class: "text-footer-contrast hover:text-primary transition-colors flex items-center gap-2 py-2 px-1 rounded min-h-[44px]" do %>
              <%= icon "book-open", class: "size-4 flex-shrink-0" %>
              <span><%= t('navigation.books') %></span>
            <% end %></li>
          </ul>
          <ul class="space-y-3 text-sm">
            <li><%= link_to fatwas_path, class: "text-footer-contrast hover:text-primary transition-colors flex items-center gap-2" do %>
              <%= icon "scale", class: "size-4" %>
              <span><%= t('navigation.fatwas') %></span>
            <% end %></li>
            <li><%= link_to benefits_path, class: "text-footer-contrast hover:text-primary transition-colors flex items-center gap-2" do %>
              <%= icon "star", class: "size-4" %>
              <span><%= t('navigation.benefits') %></span>
            <% end %></li>
            <li><%= link_to news_index_path, class: "text-footer-contrast hover:text-primary transition-colors flex items-center gap-2" do %>
              <%= icon "newspaper", class: "size-4" %>
              <span><%= t('navigation.news') %></span>
            <% end %></li>
            <li><%= link_to about_path, class: "text-footer-contrast hover:text-primary transition-colors flex items-center gap-2" do %>
              <%= icon "user", class: "size-4" %>
              <span><%= t('navigation.about_sheikh') %></span>
            <% end %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</footer>
