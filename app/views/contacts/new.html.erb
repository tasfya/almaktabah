<% content_for :title, t('navigation.contact_us') %>
<div class="bg-white py-16">
  <div class="container mx-auto px-4">
    <!-- Hero Section -->
    <div class="text-center mb-16">
      <div class="mb-8">
        <!-- Contact Icon -->
        <div class="inline-flex items-center justify-center w-20 h-20 mx-auto mb-6 bg-black rounded-full">
          <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
        </div>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4"><%= t('.title') %></h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        <%= t('.subtitle') %>
      </p>
    </div>
    <!-- Contact Form -->
    <div class="max-w-3xl mx-auto container">
      <div class="bg-white rounded-lg shadow-lg p-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6 text-right"><%= t('.send_message') %></h2>
        <% if notice %>
          <div class="mb-6 p-4 bg-gray-100 border border-gray-300 rounded-lg">
            <div class="flex items-center gap-3 flex-row-reverse">
              <svg class="w-5 h-5 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <p class="text-black text-right"><%= notice %></p>
            </div>
          </div>
        <% end %>
        <%= form_with model: @contact || Contact.new, url: contact_path, local: true, class: "space-y-6" do |form| %>
          <% if @contact&.errors&.any? %>
            <div class="mb-6 p-4 bg-gray-100 border border-gray-400 rounded-lg">
              <h3 class="text-black font-semibold mb-2 text-right"><%= t('forms.errors.header', default: 'يرجى تصحيح الأخطاء التالية:') %></h3>
              <ul class="text-gray-700 text-right list-disc list-inside">
                <% @contact.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div>
            <%= form.label :name, t('.form.labels.name'), class: "block text-right text-gray-700 font-semibold mb-2" %>
            <%= form.text_field :name, 
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-right focus:ring-2 focus:ring-gray-500 focus:border-gray-500 transition-colors #{'border-gray-600' if @contact&.errors&.include?(:name)}", 
                  placeholder: t('.form.placeholders.name') %>
          </div>
          <div>
            <%= form.label :email, t('.form.labels.email'), class: "block text-right text-gray-700 font-semibold mb-2" %>
            <%= form.email_field :email, 
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-right focus:ring-2 focus:ring-gray-500 focus:border-gray-500 transition-colors #{'border-gray-600' if @contact&.errors&.include?(:email)}", 
                  placeholder: t('.form.placeholders.email') %>
          </div>
          <div>
            <%= form.label :subject, t('.form.labels.subject'), class: "block text-right text-gray-700 font-semibold mb-2" %>
            <%= form.text_field :subject, 
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-right focus:ring-2 focus:ring-gray-500 focus:border-gray-500 transition-colors #{'border-gray-600' if @contact&.errors&.include?(:subject)}", 
                  placeholder: t('.form.placeholders.subject') %>
          </div>
          <div>
            <%= form.label :message, t('.form.labels.message'), class: "block text-right text-gray-700 font-semibold mb-2" %>
            <%= form.text_area :message, 
                  rows: 6,
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-right focus:ring-2 focus:ring-gray-500 focus:border-gray-500 transition-colors resize-vertical #{'border-gray-600' if @contact&.errors&.include?(:message)}", 
                  placeholder: t('.form.placeholders.message') %>
          </div>
          <div class="text-center">
            <%= form.submit t('.form.submit'), 
                  class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
