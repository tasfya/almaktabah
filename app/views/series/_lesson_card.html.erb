<div class="border rounded-lg p-4 flex items-center justify-between hover:shadow transition">
  <div class="flex flex-col items-center gap-3 text-sm text-gray-700">
    <div class="flex items-center gap-2">
      <% if lesson.series.present? %>
        <span class="bg-gray-100 px-2 py-1 rounded-full text-xs text-gray-600">
          <%= lesson.series.title %>
        </span>
      <% end %>
      <span class="bg-black text-white px-2 py-1 rounded-full text-xs">
        <%= lesson.media_type %>
      </span>
      <% if false && lesson.published_date %>
        <span class="text-gray-500">
          <%= l(lesson.published_date, format: :long) %>
        </span>
      <% end %>
    </div>
    <%= link_to lesson.title, lesson_path(lesson), class: "text-xl font-semibold hover:text-indigo-600" %>
  </div>
  <div class="flex items-center gap-2">
    <%= play_button(resource: lesson, path: play_lesson_path(lesson)) %>
    <%= link_to lesson_path(lesson), class: "btn btn-primary gap-2" do %>
      <%= icon "eye", class: "size-5" %>
      <%= t('buttons.read') %>
    <% end %>
  </div>
</div>
