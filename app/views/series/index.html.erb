<div class="bg-gray-50 min-h-screen py-8">
  <div class="container mx-auto px-4">    
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <div class="lg:col-span-2">
        <div class="bg-white rounded-lg shadow-md p-6">
          <h1 class="text-2xl font-bold text-gray-900 mb-6">السلاسل العلمية</h1>
          <p class="text-gray-600 mb-6">استعرض مجموعة متنوعة من السلاسل العلمية والدروس المنظمة</p>
          <%= render 'shared/filters' %>
          <% if @series.any? %>
            <div class="flex flex-col items-center gap-3">
              <% @series.each do |series| %>
                <%= render partial: "series_card", locals: { series:}%>
              <% end %>
            </div>
          <% else %>
            <div class="text-center text-gray-500 py-8">
              <p>لا توجد سلاسل متاحة حالياً</p>
            </div>
          <% end %>          
          <%= render 'shared/pagination' %>
        </div>
      </div>
      <%= render partial: "shared/side_bar" %>
    </div>
  </div>
</div>