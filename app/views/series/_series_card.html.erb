<%= link_to series_path(series), class: "block w-full bg-white border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow" do %>
  <h3 class="text-lg font-semibold text-gray-700 mb-2 hover:text-gray-900">
    <%= series.title %>
  </h3>
  <span class="inline-flex items-center gap-2 text-sm text-gray-500 mb-3">
    <%= pluralize(series.lessons.count, 'درس') %>
    <%= icon "book-open", class: "size-5"%>
  </span>
  <p class="text-gray-600 text-sm mb-4"><%= truncate(series.description, length: 150) %></p>
  <div class="flex items-center justify-between text-sm text-gray-500">
    <button class="btn btn-secondary w-fit">
      <%= t("buttons.view_series")%>
      <%= icon "arrow-left", class: "size-5" %>
    </button>
  </div>
<% end %>