<%= link_to series_path(series), class: "block w-full bg-background border border-background-subtle rounded-lg p-6 hover:shadow-md transition-shadow" do %> <%# Changed bg-white to bg-background, border-gray-200 to border-background-subtle %>
  <h3 class="text-lg font-semibold text-foreground mb-2 hover:text-primary-500">
    <%= series.title %>
  </h3>
  <span class="inline-flex items-center gap-2 text-sm text-foreground">
    <%= pluralize(series.lessons.count, 'درس') %>
    <%= icon "book-open", class: "size-5 text-primary-500" %>
  </span>
  <p class="text-foreground text-sm mb-4"><%= truncate(series.description, length: 150) %></p>
  <div class="flex items-center justify-between text-sm text-foreground">
    <button class="btn btn-secondary w-fit">
      <%= t("buttons.view_series")%>
      <%= icon "arrow-left", class: "size-5" %>
    </button>
  </div>
<% end %>