<% content_for :title, @article.title %>
<%= json_ld_tag(article_json_ld(@article)) %>

<div class="min-h-screen">
  <div class="container mx-auto px-4 max-w-4xl">
    <article class="bg-base-100 rounded-2xl shadow-xl overflow-hidden">
      <div class="p-8 lg:p-12">
        <header class="mb-10">
          <div class="flex flex-wrap items-center gap-3 mb-4">
            <% if @article.scholar.present? %>
              <div class="flex items-center gap-2 text-base-content/70">
                <%= icon "user", class: "size-4" %>
                <span class="font-medium"><%= @article.scholar.name %></span>
              </div>
            <% end %>
            <% if @article.scholar.present? && @article.published_at.present? %>
              <span class="text-base-content/30">|</span>
            <% end %>
            <% if @article.published_at.present? %>
              <time class="text-base-content/60 text-sm">
                <%= l(@article.published_at, format: :long) %>
              </time>
            <% end %>
          </div>
          <h1 class="text-3xl lg:text-4xl font-bold leading-tight">
            <%= @article.title %>
          </h1>
        </header>

        <div class="bg-base-200 rounded-xl p-6 mb-10">
          <div class="flex flex-wrap items-center gap-4">
            <button class="btn btn-secondary btn-sm"
                    data-controller="share-trigger"
                    data-share-trigger-modal-id-value="article_share_modal"
                    data-action="click->share-trigger#open">
              <%= icon "share", class: "size-4" %>
            </button>
          </div>
        </div>

        <% if @article.content.present? %>
          <section class="mb-10">
            <div class="bg-base-200 rounded-xl p-6">
              <div class="prose prose-lg max-w-none">
                <%= @article.content.to_s %>
              </div>
            </div>
          </section>
        <% end %>
      </div>
    </article>
  </div>
</div>

<%= render 'shared/share_modal',
    modal_id: 'article_share_modal',
    url: request.original_url,
    title: html_escape(@article.title),
    text: html_escape(@article.title) %>
