<%# Mobile Header Partial - Visible only on mobile devices %>
<div class="sticky top-0 z-30 bg-base-100 border-b border-base-300 shadow-sm lg:hidden">
  <div class="flex items-center justify-between p-4">
    <%# Mobile Filter Toggle Button %>
    <label
      for="mobile-filter-drawer"
      class="btn btn-primary btn-outline justify-start gap-2 lg:hidden"
      aria-label="Toggle search filters">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="w-5 h-5 stroke-current">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
      <span><%= t('search.filters.title', default: 'Filters') %></span>
      <% if @selected_scholars.present? || @selected_content_types.present? %>
        <div class="badge badge-primary badge-sm">
          <%= @selected_scholars.to_a.count + @selected_content_types.to_a.count %>
        </div>
      <% end %>
    </button>
    <%# Search Title and Results Count %>
    <div class="flex-1 text-center">
      <h1 class="text-lg font-semibold">
        <%= t('navigation.search') %>
        <% if @total_results.present? && @total_results > 0 %>
          <span class="badge badge-ghost badge-sm ml-2">
            <%= number_with_delimiter(@total_results) %>
          </span>
        <% end %>
      </h1>
    </div>
    <%# Placeholder for balance %>
    <div class="flex-none w-12"></div>
  </div>
</div>
