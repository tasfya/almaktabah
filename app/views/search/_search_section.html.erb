<div class="rounded-lg shadow-md border border-base-300 overflow-hidden">
  <div class="bg-background-subtle px-6 py-4 border-b border-base-300">
    <h3 class="text-lg font-semibold">
      <%= t("navigation.#{model_name}") %>
      <span class="text-sm font-normal">
        (<%= results.count %> <%= t(".result_count", count: results.count) %>)
      </span>
    </h3>
  </div>
  <div class="p-6">
    <div class="space-y-4">
      <% results.each do |result| %>
        <%=
          case result
          when Lesson
            link_target = lesson_path(result)
            link_label  = result.series.title
          when Scholar
            link_target = scholar_path(result)
            link_label  = "#{result.first_name} #{result.last_name}"
          when Lecture
            link_target = lecture_path(result.scholar, result)
            link_label  = result.title
          when Book
            link_target = book_path(result.scholar, result)
            link_label  = result.title
          when Series
            link_target = series_path(result.scholar, result)
            link_label  = result.title
          else
            link_target = polymorphic_path(result)
            link_label  = result.try(:title) || result.to_s
          end
        %>
        <div class="mt-3 card card-border bg-base-100 shadow-sm hover:shadow-md transition-colors">
          <div class="card-body">
            <div class="flex items-start gap-4">
              <!-- Icon -->
              <div class="flex-shrink-0">
                <% case model_name %>
                <% when :books %>
                  <%= icon "book-open", class: "size-6" %>
                <% when :lectures %>
                  <%= icon "play", class: "size-6 text-secondary-500" %>
                <% when :lessons %>
                  <%= icon "graduation-cap", library: "lucide", class: "size-6" %>
                <% when :series %>
                  <%= icon "folder", class: "size-6" %>
                <% when :news %>
                  <%= icon "newspaper", class: "size-6" %>
                <% when :fatwas %>
                  <%= icon "scale", class: "size-6" %>
                <% when :scholars %>
                  <%= icon "user", class: "size-6" %>
                <% end %>
              </div>
              <!-- Main content -->
              <div class="flex-1 min-w-0">
                <h4 class="card-title">
                  <%= link_to link_label, link_target, class: "transition-colors" %>
                </h4>
                <% if result.respond_to?(:description) && result.description.present? %>
                  <p class="text-sm line-clamp-2">
                    <%= truncate(strip_tags(result.description), length: 150) %>
                  </p>
                <% end %>
              </div>
              <!-- View button -->
              <div class="card-actions justify-end">
                <%= link_to link_target, class: "btn btn-secondary" do %>
                  <%= t('.view') %>
                  <%= icon "arrow-left", class: "size-3" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
