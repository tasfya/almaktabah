<div class="bg-background rounded-lg shadow-md border border-background-subtle overflow-hidden">
  <div class="bg-background-subtle px-6 py-4 border-b border-background-subtle">
    <h3 class="text-lg font-semibold text-foreground">
      <%= t("navigation.#{model_name}") %>
      <span class="text-sm font-normal text-foreground">
        (<%= results.count %> <%= t(".result_count", count: results.count) %>)
      </span>
    </h3>
  </div>

  <div class="p-6">
    <div class="space-y-4">
      <% results.each do |result| %>
        <div class="flex items-start gap-4 p-4 border border-background-subtle rounded-lg hover:bg-background-subtle transition-colors">
          <div class="flex-shrink-0">
            <% case model_name %>
            <% when :books %>
              <%= icon "book-open", class: "size-6 text-primary-500" %>
            <% when :lectures %>
              <%= icon "play", class: "size-6 text-secondary-500" %>
            <% when :lessons %>
              <%= icon "graduation-cap", library: "lucide", class: "size-6 text-primary-500" %>
            <% when :series %>
              <%= icon "folder", class: "size-6 text-primary-500" %>
            <% when :news %>
              <%= icon "newspaper", class: "size-6 text-primary-500" %>
            <% when :benefits %>
              <%= icon "star", class: "size-6 text-primary-500" %>
            <% when :fatwas %>
              <%= icon "scale", class: "size-6 text-primary-500" %>
            <% when :scholars %>
              <%= icon "user", class: "size-6 text-primary-500" %>
            <% end %>
          </div>

          <div class="flex-1 min-w-0">
            <h4 class="text-lg font-medium text-foreground mb-2">
              <%= link_to result.title, send("#{model_name.to_s.singularize}_path", result), class: "hover:text-primary-500 transition-colors" %>
            </h4>

            <% if result.respond_to?(:description) && result.description.present? %>
              <p class="text-foreground text-sm line-clamp-2">
                <%= truncate(strip_tags(result.description), length: 150) %>
              </p>
            <% end %>

            <div class="flex items-center gap-4 mt-3 text-xs text-foreground">
              <% if false && result.respond_to?(:published_at) && result.published_at.present? %>
                <span class="flex items-center gap-1">
                  <%= icon "calendar", class: "size-3 text-primary-500" %>
                  <%= l(result.published_at, format: :long) %>
                </span>
              <% end %>
            </div>
          </div>

          <div class="flex-shrink-0">
            <%= link_to send("#{model_name.to_s.singularize}_path", result), class: "btn btn-secondary btn-sm" do %>
              <%= t('.view') %>
              <%= icon "arrow-left", class: "size-3" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <% if results.count >= 5 %>
      <div class="mt-6 text-center">
        <%= link_to send("#{model_name}_path", q: { title_or_description_cont: @query }),
            class: "btn btn-link text-primary-500 hover:text-primary-600" do %>
          <%= t('.view_all_in', type: t("navigation.#{model_name}")) %>
          <%= icon "arrow-left", class: "size-4" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>