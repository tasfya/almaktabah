<div class="card card-border bg-base-100 shadow-sm">
  <div class="card-body">
    <h2 class="card-title">
      <%= link_to fatwa['title'], fatwa_path(fatwa['slug']), class: "hover:text-primary" %>
    </h2>
    <% if fatwa['scholar'].present? %>
      <div class="flex items-center gap-2 mb-2">
        <span class="text-sm text-base-content/70">
          <%= link_to fatwa['scholar']['name'], scholar_path(fatwa['scholar']['slug']), class: "hover:text-primary" %>
        </span>
      </div>
    <% end %>
    <div class="flex gap-2 mb-2">
      <% if fatwa['audio_url'].present? %>
        <div class="badge badge-info"><%= t('common.audio') %></div>
      <% else %>
        <div class="badge badge-neutral"><%= t('buttons.read') %></div>
      <% end %>
    </div>
    <% if fatwa['question'].present? %>
      <p class="text-sm line-clamp-3">
        <strong><%= t('fatwas.question_label') %></strong> <%= truncate(strip_tags(fatwa['question']), length: 120) %>
      </p>
    <% end %>
    <div class="card-actions justify-end mt-4">
      <%= link_to fatwa_path(fatwa['slug']), class: "btn btn-primary btn-sm" do %>
        <%= icon "scale", class: "w-4 h-4 mr-1" %>
        <%= t('buttons.view') %>
      <% end %>
    </div>
  </div>
</div>
