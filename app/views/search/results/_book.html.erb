<div class="card card-border bg-base-100 card-sm overflow-hidden relative shadow-sm hover:shadow-lg transition-shadow">
  <div class="card-body">
    <div class="flex items-center gap-2 mb-2">
      <%= icon "book-open", class: "w-5 h-5 text-primary" %>
      <h2 class="card-title">
        <%= link_to book.url, class: "hover:text-primary stretched-link", data: { turbo_frame: "_top" } do %>
          <%= sanitize(book.highlighted_title, tags: %w[mark]) %>
        <% end %>
      </h2>
    </div>
    <% if book.scholar_name.present? %>
      <div class="flex items-center gap-2 mb-2">
        <span class="text-sm text-base-content/70"><%= t('search.results.sheikh') %> <%= book.scholar_name %></span>
      </div>
    <% end %>
    <% if book.description.present? %>
      <p class="text-sm line-clamp-3"><%= truncate(strip_tags(book.description), length: 150) %></p>
    <% end %>
  </div>
</div>
