<div class="bg-gray-50 min-h-screen py-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <div class="lg:col-span-2">
        <div class="bg-white rounded-lg shadow-md p-6">
          <h1 class="text-2xl font-bold text-gray-900 mb-6">
            <%= t('.title') %>
          </h1>
          <p class="text-gray-600 mb-6">
            <%= t('.description') %>
          </p>
          <!-- Filters -->
          <%= render 'shared/filters' %>
          <!-- Benefits Grid -->
          <% if @benefits.any? %>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <% @benefits.each do |benefit| %>
                <div class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow">
                  <h3 class="text-lg font-semibold text-gray-900 mb-3">
                    <%= link_to benefit.title, benefit_path(benefit), class: "hover:text-indigo-600" %>
                  </h3>
                  <p class="text-gray-600 text-sm mb-4"><%= truncate(benefit.content, length: 150) %></p>
                  <div class="flex items-center justify-between text-sm text-gray-500">
                    <span class="bg-gray-100 px-2 py-1 rounded"><%= benefit.category %></span>
                    <div class="flex space-x-4 rtl:space-x-reverse">
                      <% if false && benefit.respond_to?(:views) %>
                        <span><%= benefit.views %> <%= t('common.view_count', count: benefit.views) %></span>
                      <% end %>
                      <% if false %>
                        <span><%= benefit.created_at.strftime("%Y/%m/%d") %></span>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center text-gray-500 py-8">
              <p>
                <%= t('.no_benefits') %>
              </p>
            </div>
          <% end %>
          <!-- Pagination -->
          <%= render 'shared/pagination' %>
        </div>
      </div>
      <%= render partial: "shared/side_bar" %>
    </div>
  </div>
</div>
