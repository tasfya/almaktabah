<% content_for :title, t('navigation.benefits') %>
<div class="min-h-screen py-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 gap-8">
      <div class="lg:col-span-2">
        <div class="rounded-lg shadow-md p-6">
          <h1 class="text-2xl font-bold mb-6">
            <%= t('.title') %>
          </h1>
          <p class="mb-6">
            <%= t('.description') %>
          </p>
          <%= render 'shared/filters' %>
          <% if @benefits.any? %>
            <div class="bg-card rounded-lg shadow overflow-hidden w-full">
              <div class="divide-y divide-gray-200">
                <% @benefits.each_with_index do |benefit, index| %>
                  <%= render "shared/playlist_card", resource: benefit, with_icon: true, index: index %>
                <% end %>
              </div>
            </div>
          <% else %>
            <div class="text-center py-8">
              <p>
                <%= t('.no_benefits') %>
              </p>
            </div>
          <% end %>
          <%= render 'shared/pagination' %>
        </div>
      </div>
    </div>
  </div>
</div>