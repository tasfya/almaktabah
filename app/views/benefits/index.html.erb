<% content_for :title, t('navigation.benefits') %>
<div class="container mx-auto">
  <div class="card bg-base-100 shadow-sm">
    <div class="card-body">
      <h1 class="card-title">
        <%= t('.title') %>
      </h1>
      <p class="text-sm text-gray-600 mb-4">
        <%= t('.description') %>
      </p>
      <%= render 'shared/filters' %>
      <% if @benefits.any? %>
        <div class="bg-white rounded-lg shadow-sm overflow-hidden">
          <div class="divide-y">
            <% @benefits.each_with_index do |benefit, idx| %>
              <%= render "shared/playlist_card", resource: benefit, with_icon: true, index: idx %>
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="text-center text-gray-500 py-8">
          <p>
            <%= t('.no_benefits') %>
          </p>
        </div>
      <% end %>
      <%= render 'shared/pagination' %>
    </div>
  </div>
</div>
