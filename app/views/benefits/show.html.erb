<div class="bg-gray-50 min-h-screen py-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2">
        <article class="bg-white rounded-lg shadow-md p-8">
          <header class="mb-8">
            <% if @benefit.video? || @benefit.optimized_audio? %>
              <section class="mb-8">
                <% if @benefit.video? %>
                  <video controls class="w-full rounded-lg shadow-sm">
                    <source src="<%= url_for(@benefit.video) %>" type="<%= @benefit.video.content_type %>">
                    <%= t('common.browser_no_support_video') %>
                  </video>
                <% end %>
              </section>
            <% else %>
              <div class="mb-8">
                <p class="text-gray-500">
                  <%= t("common.no_media_available") %>
                </p>
              </div>
            <% end %>
            <h1 class="text-3xl font-bold text-gray-900 mb-4">
              <%= @benefit.title %>
            </h1>
            <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600 mb-6">
              <% if @benefit.category.present? %>
                <span class="badge badge-primary">
                  <%= @benefit.category %>
                </span>
              <% end %>
              <% if false && @benefit.published_at %>
                <time><%= @benefit.published_at.strftime("%Y/%m/%d") %></time>
              <% end %>
            </div>
          </header>
          <% if @benefit.optimized_audio? || @benefit.video? %>
            <section class="mb-8">
              <div class="bg-gray-50 rounded-lg p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">
                  <%= t(".download_options")%>
                </h3>
                <div class="flex flex-wrap gap-4">
                  <% if @benefit.optimized_audio? %>
                    <%= link_to rails_blob_url(@benefit.optimized_audio, disposition: "attachment"), download: true, target: "_blank", class: "btn btn-primary w-fit" do %>
                      <%= icon "arrow-down-tray", class: "size-5" %>
                      <%= t("buttons.download_audio")%>
                    <% end %>
                    <%= play_button(resource: @benefit, path: play_benefit_path(@benefit)) %>
                  <% end %>
                  <% if @benefit.video? %>
                    <%= link_to rails_blob_url(@benefit.video, disposition: "attachment"), download: true, target: "_blank", class: "btn btn-secondary w-fit" do %>
                      <%= icon "arrow-down-tray", class: "size-5" %>
                      <%= t("buttons.download_video")%>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </section>
          <% end %>
        </article>
      </div>
      <!-- Sidebar -->
    </div>
  </div>
</div>
