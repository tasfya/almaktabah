<% content_for :title, "تواصل مع الشيخ" %>

<div class="bg-white py-16">
  <div class="container mx-auto px-4">
    <!-- Hero Section -->
    <div class="text-center mb-16">
      <div class="mb-8">
        <!-- Contact Icon -->
        <div class="inline-flex items-center justify-center w-20 h-20 mx-auto mb-6 bg-black rounded-full">
          <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
        </div>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">تواصل مع الشيخ</h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        يمكنكم التواصل مع الشيخ من خلال الوسائل التالية أو عبر النموذج أدناه
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Form -->
      <div class="order-2 lg:order-1">
        <div class="bg-white rounded-lg shadow-lg p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-6 text-right">إرسال رسالة</h2>
          
          <% if notice %>
            <div class="mb-6 p-4 bg-gray-100 border border-gray-300 rounded-lg">
              <div class="flex items-center gap-3 flex-row-reverse">
                <svg class="w-5 h-5 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <p class="text-black text-right"><%= notice %></p>
              </div>
            </div>
          <% end %>

          <%= form_with model: @contact || Contact.new, url: contact_path, local: true, class: "space-y-6" do |form| %>
            <% if @contact&.errors&.any? %>
              <div class="mb-6 p-4 bg-gray-100 border border-gray-400 rounded-lg">
                <h3 class="text-black font-semibold mb-2 text-right">يرجى تصحيح الأخطاء التالية:</h3>
                <ul class="text-gray-700 text-right list-disc list-inside">
                  <% @contact.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div>
              <%= form.label :name, "الاسم", class: "block text-right text-gray-700 font-semibold mb-2" %>
              <%= form.text_field :name, 
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-right focus:ring-2 focus:ring-gray-500 focus:border-gray-500 transition-colors #{'border-gray-600' if @contact&.errors&.include?(:name)}", 
                  placeholder: "أدخل اسمك الكريم" %>
            </div>

            <div>
              <%= form.label :email, "البريد الإلكتروني", class: "block text-right text-gray-700 font-semibold mb-2" %>
              <%= form.email_field :email, 
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-right focus:ring-2 focus:ring-gray-500 focus:border-gray-500 transition-colors #{'border-gray-600' if @contact&.errors&.include?(:email)}", 
                  placeholder: "أدخل بريدك الإلكتروني" %>
            </div>

            <div>
              <%= form.label :subject, "الموضوع", class: "block text-right text-gray-700 font-semibold mb-2" %>
              <%= form.text_field :subject, 
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-right focus:ring-2 focus:ring-gray-500 focus:border-gray-500 transition-colors #{'border-gray-600' if @contact&.errors&.include?(:subject)}", 
                  placeholder: "موضوع الرسالة" %>
            </div>

            <div>
              <%= form.label :message, "الرسالة", class: "block text-right text-gray-700 font-semibold mb-2" %>
              <%= form.text_area :message, 
                  rows: 6,
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-right focus:ring-2 focus:ring-gray-500 focus:border-gray-500 transition-colors resize-vertical #{'border-gray-600' if @contact&.errors&.include?(:message)}", 
                  placeholder: "اكتب رسالتك هنا..." %>
            </div>

            <div class="text-center">
              <%= form.submit "إرسال الرسالة", 
                  class: "bg-black text-white px-8 py-3 rounded-lg hover:bg-gray-800 transition-colors font-semibold cursor-pointer" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Contact Information -->
      <div class="order-1 lg:order-2">
        <div class="bg-white rounded-lg shadow-lg p-8 mb-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-6 text-right">معلومات التواصل</h2>
          
          <div class="space-y-6">
            <!-- Location -->
            <div class="flex items-start gap-4 flex-row-reverse">
              <div class="flex-shrink-0 w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <div class="text-right">
                <h3 class="font-semibold text-gray-900 mb-1">الموقع</h3>
                <p class="text-gray-600">الجبيل، المنطقة الشرقية<br>المملكة العربية السعودية</p>
              </div>
            </div>

            <!-- Email -->
            <div class="flex items-start gap-4 flex-row-reverse">
              <div class="flex-shrink-0 w-12 h-12 bg-emerald-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div class="text-right">
                <h3 class="font-semibold text-gray-900 mb-1">البريد الإلكتروني</h3>
                <p class="text-gray-600">للتواصل المباشر مع الشيخ</p>
              </div>
            </div>

            <!-- Website -->
            <div class="flex items-start gap-4 flex-row-reverse">
              <div class="flex-shrink-0 w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9m0 9c-5 0-9-4-9-9s4-9 9-9"/>
                </svg>
              </div>
              <div class="text-right">
                <h3 class="font-semibold text-gray-900 mb-1">الموقع</h3>
                <p class="text-gray-600">المكتبة الصوتية للشيخ</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Guidelines -->
        <div class="bg-blue-50 rounded-lg p-6">
          <h3 class="text-lg font-bold text-gray-900 mb-4 text-right">آداب المراسلة</h3>
          <div class="space-y-2 text-right text-sm text-gray-700">
            <div class="flex items-start gap-2 flex-row-reverse">
              <svg class="w-4 h-4 text-blue-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span>اكتب السؤال بوضوح ودقة</span>
            </div>
            <div class="flex items-start gap-2 flex-row-reverse">
              <svg class="w-4 h-4 text-blue-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span>ابحث في المحتوى الموجود قبل السؤال</span>
            </div>
            <div class="flex items-start gap-2 flex-row-reverse">
              <svg class="w-4 h-4 text-blue-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span>تحلى بالأدب في المخاطبة</span>
            </div>
            <div class="flex items-start gap-2 flex-row-reverse">
              <svg class="w-4 h-4 text-blue-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span>انتظر الرد بصبر وأدب</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
