<% content_for :title, t('navigation.home') %>
<%= render partial: "featured_lesson", locals: { lesson: @featured_lesson } if @featured_lesson.present?%>
<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 gap-8">
      <div class="lg:col-span-2">
        <div class="bg-white w-full rounded-lg shadow-md flex items-center gap-1 flex-wrap p-6">
          <h3 class="text-xl font-bold text-gray-900 mb-6 text-right"><%= t('navigation.recent_lessons') %></h3>
          <div class="space-y-4 w-full">
            <% @recent_lessons.each do |lesson| %>
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors w-full">
                <!-- Icon Section -->
                <div class="flex-shrink-0 self-start sm:self-auto">
                  <div class="bg-white p-2 rounded-lg border w-fit">
                    <%= icon "book-open", class: "size-6 text-gray-700" %>
                  </div>
                </div>
                <div class="flex-1 text-right sm:ml-4 w-full">
                  <h4 class="font-semibold text-gray-900 mb-1"><%= lesson.full_title %></h4>
                  <p class="text-sm text-gray-600"><%= truncate(lesson.description, length: 200) %></p>
                </div>
                <div class="flex sm:flex-row flex-col sm:items-center sm:justify-end gap-2 sm:ml-auto w-full sm:w-auto">
                  <%= play_button(resource: lesson, path: play_lesson_path(lesson), klass: "btn btn-secondary w-full sm:w-auto") %>
                  <% if lesson.youtube_url.present? %>
                    <%= link_to youtube_embed_url(lesson.youtube_url), class: "btn btn-secondary gap-2", target: "_blank" do %>
                      <%= icon "youtube", library: "lucide", class: "size-5" %>
                      <span class="text-sm whitespace-nowrap">
                        <%= t('buttons.watch_on_youtube') %>
                      </span>
                    <% end %>
                  <% end %>
                  <%= link_to lesson_path(lesson), class: "btn btn-primary flex items-center justify-center gap-2 w-full sm:w-auto" do %>
                    <%= icon "eye", class: "size-5" %>
                    <span class="text-sm whitespace-nowrap"><%= t('buttons.view') %></span>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <!-- Left Sidebar - Downloads -->
    </div>
  </div>
</section>
<!-- Content Categories Icons -->
<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12 text-gray-900">
      <%= t('common.site_contents') %>
    </h2>
    <div class="flex flex-wrap justify-center items-center gap-12 text-center">
      <%= link_to books_path, class: "group flex flex-col items-center" do %>
        <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mb-3 group-hover:bg-blue-200 transition-colors">
          <%= icon("book-open", class: "w-8 h-8 text-blue-600") %>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors"><%= t('navigation.books') %></h3>
      <% end %>
      <%= link_to lectures_path, class: "group flex flex-col items-center" do %>
        <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mb-3 group-hover:bg-green-200 transition-colors">
          <%= icon("microphone", class: "w-8 h-8 text-green-600") %>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 group-hover:text-green-600 transition-colors"><%= t('navigation.lectures') %></h3>
      <% end %>
      <%= link_to lessons_path, class: "group flex flex-col items-center" do %>
        <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mb-3 group-hover:bg-red-200 transition-colors">
          <%= icon("book-open", class: "w-8 h-8 text-red-600") %>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 group-hover:text-red-600 transition-colors"><%= t('navigation.lessons') %></h3>
      <% end %>
      <%= link_to series_index_path, class: "group flex flex-col items-center" do %>
        <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mb-3 group-hover:bg-purple-200 transition-colors">
          <%= icon("circle-stack", class: "w-8 h-8 text-purple-600") %>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 group-hover:text-purple-600 transition-colors"><%= t('navigation.series') %></h3>
      <% end %>
    </div>
  </div>
</section>
