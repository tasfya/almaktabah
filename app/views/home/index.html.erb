<% content_for :title, t('navigation.home') %>
<%= render partial: "featured_lesson", locals: { lesson: @featured_lesson } if @featured_lesson.present?%>
<section class="py-16">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 gap-8">
      <div class="lg:col-span-2">
        <div class="border border-background-contrast w-full rounded-lg shadow-md flex items-center gap-1 flex-wrap p-6">
          <h3 class="text-xl font-bold mb-6 text-right"><%= t('navigation.recent_lessons') %></h3>
          <div class="space-y-4 w-full">
            <% @recent_lessons.each do |lesson| %>
              <div class="bg-card hover:bg-card-hover text-card-contrast flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 p-4 rounded-lg hover:bg-secondary-100 transition-colors w-full">
                <div class="flex-shrink-0 self-start sm:self-auto">
                  <div class="p-2 rounded-lg border w-fit border-background-contrast">
                    <%= icon "book-open", class: "size-6" %>
                  </div>
                </div>
                <div class="flex-1 text-right sm:ml-4 w-full">
                  <h4 class="font-semibold mb-1"><%= lesson.full_title %></h4>
                  <p class="text-sm"><%= truncate(lesson.description, length: 200) %></p>
                </div>
                <div class="flex sm:flex-row flex-col sm:items-center sm:justify-end gap-2 sm:ml-auto w-full sm:w-auto">
                  <%= play_button(resource: lesson, klass: "btn btn-secondary w-full sm:w-auto") %>
                  <% if lesson.youtube_url.present? %>
                    <%= link_to youtube_embed_url(lesson.youtube_url), class: "btn btn-secondary gap-2 youtube_url.present?", target: "_blank" do %>
                      <%= icon "youtube", library: "lucide", class: "size-5" %>
                      <span class="text-sm whitespace-nowrap">
                        <%= t('buttons.watch_on_youtube') %>
                      </span>
                    <% end %>
                  <% end %>
                  <%= link_to lesson_path(lesson), class: "btn btn-primary flex items-center justify-center gap-2 w-full sm:w-auto" do %>
                    <%= icon "eye", class: "size-5" %>
                    <span class="text-sm whitespace-nowrap"><%= t('buttons.view') %></span>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      </div>
  </div>
</section>
