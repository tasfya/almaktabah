<% content_for :title, t('navigation.home') %>
<%= render partial: "featured_lesson", locals: { lesson: @featured_lesson } if @featured_lesson.present?%>
<section class="py-16">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 gap-8">
      <div class="lg:col-span-2">
        <div class="border border-background-contrast w-full rounded-lg shadow-md flex items-center gap-1 flex-wrap p-6">
          <h3 class="text-xl font-bold mb-6 text-right"><%= t('navigation.recent_lessons') %></h3>
          <div class="bg-card rounded-lg shadow overflow-hidden w-full">
            <div class="divide-y divide-gray-200">
              <% @recent_lessons.each_with_index do |lesson, index| %>
                <%= render "shared/playlist_card", resource: lesson, with_icon: true, index: index %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
</section>
