<section class="relative w-full overflow-hidden">
  <div class="absolute inset-0">
    <%= image_tag "background.jpg", height: 600, class: "absolute inset-0 w-full h-full object-cover object-center z-[-1]" %>
    <div class="absolute inset-0 bg-black/20"></div>
  </div>
  <div class="relative container mx-auto h-full flex flex-col justify-center mobile-card z-10">
    <div class="max-w-full sm:max-w-3xl text-white">
      <h1 class="text-xl sm:text-2xl md:text-3xl lg:text-5xl font-bold mb-3 sm:mb-4 md:mb-6">
        <%= series.title %>
      </h1>
      <p class="text-sm md:text-base mb-4 sm:mb-6 md:mb-8 leading-relaxed">
        <%= series.description %>
      </p>
      <div class="flex items-center gap-3 mb-4 sm:mb-6">
        <span class="inline-flex items-center gap-2 bg-white/20 backdrop-blur-sm px-2 sm:px-3 py-1 rounded-full text-sm">
          <%= pluralize(series.lessons.for_domain_id(@domain.id).count, 'درس') %>
          <%= icon "book-open", class: "size-4 sm:size-5" %>
        </span>
      </div>
      <div class="flex flex-col sm:flex-row mobile-gap">
        <%= link_to series_path(series), class: "btn btn-primary w-full sm:w-auto" do %>
          <%= icon "play", library: "lucide", class: "size-4 sm:size-5" %>
          <span class="text-sm sm:text-base whitespace-nowrap">
            <%= t('buttons.view_series') %>
          </span>
        <% end %>
      </div>
    </div>
  </div>
</section>
