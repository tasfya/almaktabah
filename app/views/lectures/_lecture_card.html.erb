<div class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow">
  <div class="flex items-start space-x-4 rtl:space-x-reverse">
    <div class="flex-shrink-0 w-24 h-24 rounded overflow-hidden bg-gray-100">
      <% if lecture.thumbnail.attached? %>
        <%= image_tag(lecture.thumbnail, 
            alt: lecture.title, 
            class: "w-full h-full object-cover") %>
      <% else %>
        <%= image_tag('audio-thumbnail.jpg', 
            alt: lecture.title, 
            class: "w-full h-full object-cover") %>
      <% end %>
    </div>
    <div class="flex-1">
      <h3 class="text-lg font-semibold text-gray-900 mb-2">
        <%= link_to lecture.title, lecture_path(lecture), class: "hover:text-gray-600" %>
      </h3>
      <% if lecture.respond_to?(:speaker) && lecture.speaker.present? %>
        <p class="text-sm text-gray-600 mb-2">المحاضر: <%= lecture.speaker %></p>
      <% end %>
      <% if false  %>
        <p class="text-gray-600 text-sm mb-4">
          <%= truncate(lecture.description, length: 200) %>
        </p>
      <% end %>
      <div class="badge badge-primary mb-2">
        <%= lecture.category %>
      </div>
    </div>
    <div class="ml-4 rtl:mr-4 rtl:ml-0 flex-shrink-0 flex items-center gap-2">
      <%= audio_play_button_with_text(lecture.audio_url, lecture.title, lecture.description, '', t('buttons.listen'), class: "btn btn-secondary") if lecture.audio? %>
      <%= link_to lecture_path(lecture), class: "btn btn-primary gap-2" do %>
        <%= icon "eye", class: "size-5" %>
        <%= t('buttons.read') %>
      <% end %>
    </div>
  </div>
</div>
