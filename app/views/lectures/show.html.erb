<% content_for :title, @lecture.seo_show_title %>
<div class="min-h-screen py-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 gap-8">
      <div class="lg:col-span-2">
        <article class="border border-base-300 rounded-lg shadow-md p-8">
          <header class="mb-8">
            <% if @lecture.video? %>
              <section class="mb-8">
                <% if @lecture.video? %>
                  <video controls class="w-full rounded">
                    <source src="<%= url_for(@lecture.video) %>" type="<%= @lecture.video.content_type %>">
                    <%= t('common.browser_no_support_video') %>
                  </video>
                <% end %>
              </section>
            <% elsif @lecture.youtube_url.present? %>
              <section class="mb-8">
                <div class="aspect-video">
                  <iframe src="<%= youtube_embed_url(@lecture.youtube_url) %>"
                          frameborder="0"
                          allowfullscreen
                          class="w-full h-full rounded"></iframe>
                </div>
              </section>
            <% end %>
            <h1 class="text-3xl font-bold mb-4">
              <%= @lecture.title %>
            </h1>
            <div class="flex flex-wrap items-center gap-4 text-sm mb-6">
              <% if @lecture.category.present? %>
                <span class="badge badge-primary">
                  <%= @lecture.category %>
                </span>
              <% end %>
              <% if false && @lecture.published_at %>
                <time class="text-foreground"><%= @lecture.published_at.strftime("%Y/%m/%d") %></time>
              <% end %>
            </div>
          </header>
          <% if @lecture.has_any_audio? || @lecture.video? %>
            <section class="mb-8">
              <div class="rounded-lg p-6">
                <h3 class="text-lg font-semibold mb-4">
                  <%= t(".download_options")%>
                </h3>
                <div class="flex flex-wrap gap-4">
                  <% if @lecture.has_any_audio? %>
                    <%= link_to direct_download_url(@lecture.best_audio), download: true, target: "_blank", class: "btn btn-primary w-fit" do %>
                      <%= icon "arrow-down-tray", class: "size-5" %>
                      <%= t("buttons.download_audio")%>
                    <% end %>
                    <%= play_button(resource: @lecture) %>
                  <% end %>
                  <% if @lecture.video? %>
                    <%= link_to direct_download_url(@lecture.video), download: true, target: "_blank", class: "btn btn-secondary w-fit" do %>
                      <%= icon "arrow-down-tray", class: "size-5" %>
                      <%= t("buttons.download_video")%>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </section>
          <% end %>
          <% if user_signed_in? && current_user.admin? && @lecture.transcription_json.present? %>
            <section class="mb-8">
              <div class="border-t border-base-300 pt-6">
                <h2 class="text-2xl font-bold mb-4">
                  <%= t('.transcription') %>
                </h2>
                <div class="prose prose-lg max-w-none p-6 bg-base-200 rounded-lg mb-4">
                  <% begin %>
                    <% transcription = JSON.parse(@lecture.transcription_json) %>
                    <p class="whitespace-pre-wrap"><%= transcription['text'] %></p>
                  <% rescue JSON::ParserError => e %>
                    <p class="text-error">Error parsing transcription: <%= e.message %></p>
                  <% end %>
                </div>
                <div class="collapse collapse-arrow bg-base-200 rounded-lg">
                  <input type="checkbox" />
                  <div class="collapse-title text-lg font-semibold">
                    <%= t('.view_full_json') %>
                  </div>
                  <div class="collapse-content">
                    <pre class="bg-base-300 p-4 rounded-lg overflow-x-auto text-sm"><code><% begin %>
<%= JSON.pretty_generate(JSON.parse(@lecture.transcription_json)) %>
<% rescue JSON::ParserError => e %>
Error parsing JSON: <%= e.message %>
<% end %></code></pre>
                  </div>
                </div>
              </div>
            </section>
          <% end %>
        </article>
      </div>
    </div>
  </div>
</div>
