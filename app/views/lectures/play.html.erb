<%= render "shared/podcast_frame", podcast: nil do |frame| %>
  <% frame.player do %>
    <div class="mb-[env(safe-area-inset-bottom)] flex flex-1 flex-col gap-3 overflow-hidden p-1 py-4">
      <%= link_to @lecture.title, lecture_path(@lecture), class: "truncate text-right text-lg font-bold leading-6 md:text-left py-4" %>
      <%= audio_tag @lecture.optimized_audio id: dom_id(@lecture, :audio), class: "w-full pb-4", controls: true, muted: Rails.env.test?, data: {controller: "player", action: "loadeddata->player#play"} %>
    </div>
  <% end %>
<% end %>
