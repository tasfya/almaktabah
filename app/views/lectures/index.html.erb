<% content_for :title, t('navigation.lectures') %>
<div class="bg-background-subtle min-h-screen py-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 gap-8">
      <div class="lg:col-span-2">
        <div class="bg-background rounded-lg shadow-md p-6">
          <h1 class="text-2xl font-bold text-foreground mb-6"><%= t('.title') %></h1>
          <p class="text-foreground mb-6"><%= t('.description') %></p>
          <%= render 'shared/filters' %>
          <% if @lectures.any? %>
            <div class="grid grid-cols-1 gap-6">
              <% @lectures.each do |lecture| %>
                <%= render partial: "lecture_card", locals: { lecture: lecture }%>
              <% end %>
            </div>
          <% else %>
            <div class="text-center text-foreground py-8">
              <p>
                <%= t(".no_lectures") %>
              </p>
            </div>
          <% end %>
          <%= render 'shared/pagination' %>
        </div>
      </div>
    </div>
  </div>
</div>