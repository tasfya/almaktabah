<% content_for :title, t('navigation.lectures') %>
<div class="bg-background-subtle min-h-screen py-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 gap-8">
      <div class="lg:col-span-2">
        <div class="bg-background rounded-lg shadow-md p-6">
          <h1 class="text-2xl font-bold text-foreground mb-6"><%= t('.title') %></h1>
          <% if @lectures.any? %>
            <div class="bg-card rounded-lg shadow overflow-hidden w-full">
              <div class="divide-y divide-gray-200">
                <% @lectures.each_with_index do |lecture, idx| %>
                  <%= render "shared/playlist_card", resource: lecture, with_icon: true, index: idx %>
                <% end %>
              </div>
            </div>
          <% else %>
            <div class="text-center text-foreground py-8">
              <p>
                <%= t(".no_lectures") %>
              </p>
            </div>
          <% end %>
          <%= render 'shared/pagination' %>
        </div>
      </div>
    </div>
  </div>
</div>
