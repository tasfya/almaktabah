<% content_for :title, t('navigation.fatwas') %>
<div class="bg-background-subtle min-h-screen py-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 gap-8">
      <div class="lg:col-span-2">
        <div class="bg-background rounded-lg shadow-md p-6">
          <h1 class="text-2xl font-bold text-foreground mb-6">
            <%= t('.title') %>
          </h1>
          <p class="text-foreground mb-6">
            <%= t('.description') %>
          </p>
          <%= render 'shared/filters' %>
          <% if @fatwas.any? %>
            <div class="grid grid-cols-1 gap-6">
              <% @fatwas.each do |fatwa| %>
                <div class="bg-background border border-background-subtle rounded-lg p-6 hover:shadow-md transition-shadow">
                  <h3 class="text-lg font-semibold text-foreground mb-2">
                    <%= link_to fatwa.title, fatwa_path(fatwa), class: "hover:text-primary-500" %>
                  </h3>

                  <div class="flex items-center justify-between text-sm text-foreground">
                    <span class="bg-background-subtle px-2 py-1 rounded text-foreground">
                      <%= fatwa.category %>
                    </span>
                    <div class="flex space-x-4 rtl:space-x-reverse">
                      <span><%= fatwa.created_at.strftime("%Y/%m/%d") %></span>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center text-foreground py-8">
              <p>
                <%= t('.no_fatwas') %>
              </p>
            </div>
          <% end %>
          <%= render 'shared/pagination' %>
        </div>
      </div>
      </div>
  </div>
</div>