<% content_for :title, @fatwa.title %>
<div class="min-h-screen py-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 gap-8">
      <div class="lg:col-span-2">
        <article class="border border-base-300 rounded-lg shadow-md p-8">
          <header class="mb-8">
            <h1 class="text-3xl font-bold mb-4">
              <%= @fatwa.title %>
            </h1>
            <div class="flex flex-wrap items-center gap-4 text-sm mb-6">
              <% if @fatwa.category.present? %>
                <span class="badge badge-primary rounded-full">
                  <%= @fatwa.category %>
                </span>
              <% end %>
            </div>
          </header>
          <% if @fatwa.question.present? %>
            <section class="mb-8">
              <h2 class="text-2xl font-bold mb-4">
                <%= t('.question') %>
              </h2>
              <div class="prose prose-lg max-w-none p-6 rounded-lg border-r-4 border-base-300">
                <%= @fatwa.question %>
              </div>
            </section>
          <% end %>
          <% if @fatwa.answer.present? %>
            <section class="mb-8">
              <h2 class="text-2xl font-bold mb-4">
                <%= t('.answer') %>
              </h2>
              <div class="prose prose-lg max-w-none p-6 rounded-lg border-r-4 border-base-300">
                <%= @fatwa.answer %>
              </div>
            </section>
          <% end %>
          <section class="mb-8">
            <div class="border-t pt-6">
              <h3 class="text-lg font-semibold mb-4">
                <%= t('.share_fatwa') %>
              </h3>
              <div class="flex items-center gap-4">
                <button class="btn btn-primary"
                        data-controller="share-trigger"
                        data-share-trigger-modal-id-value="fatwa_share_modal"
                        data-action="click->share-trigger#open">
                  <%= icon "share", class: "size-4" %>
                  <%= t('buttons.share') %>
                </button>
              </div>
            </div>
          </section>
          <section class="mt-12">
            <h2 class="text-2xl font-bold mb-6">
              <%= t('.related_fatwas') %>
            </h2>
            <% related_fatwas = Fatwa.where(category: @fatwa.category).where.not(id: @fatwa.id).order(created_at: :desc).limit(4) %>
            <% if related_fatwas.any? %>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <% related_fatwas.each do |related_fatwa| %>
                  <div class="card card-border bg-base-100 shadow-sm hover:shadow-md transition-shadow">
                    <div class="card-body">
                      <h3 class="card-title">
                        <%= link_to related_fatwa.title, fatwa_path(related_fatwa), class: "secondary-link" %>
                      </h3>
                      <% if related_fatwa.question.present? %>
                        <p class="text-sm">
                          <%= truncate(strip_tags(related_fatwa.question.to_s), length: 100) %>
                        </p>
                      <% end %>
                      <div class="card-actions justify-start">
                        <% if related_fatwa.category.present? %>
                          <span class="badge badge-primary"><%= related_fatwa.category %></span>
                        <% end %>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-8">
                <p><%= t('.no_related_fatwas') %></p>
              </div>
            <% end %>
          </section>
          <% if @fatwa.has_any_audio? %>
            <section class="mb-8">
              <div class="rounded-lg p-6">
                <h3 class="text-lg font-semibold mb-4">
                  <%= t(".download_options")%>
                </h3>
                <div class="flex flex-wrap gap-4">
                  <% if @fatwa.has_any_audio? %>
                    <%= link_to rails_blob_url(@fatwa.best_audio, disposition: "attachment"), download: true, target: "_blank", class: "btn btn-primary w-fit" do %>
                      <%= icon "arrow-down-tray", class: "size-5" %>
                      <%= t("buttons.download_audio")%>
                    <% end %>
                    <%= play_button(resource: @fatwa) %>
                  <% end %>
                </div>
              </div>
            </section>
          <% end %>
        </article>
      </div>
    </div>
  </div>
</div>
<%= render 'shared/share_modal',
    modal_id: 'fatwa_share_modal',
    url: request.original_url,
    title: html_escape(@fatwa.title),
    text: html_escape(@fatwa.title) %>
