<% content_for :title, @fatwa.title %>
<% if (json_ld = fatwa_json_ld(@fatwa)) %>
  <%= json_ld_tag(json_ld) %>
<% end %>

<div class="min-h-screen">
  <div class="container mx-auto px-4 max-w-4xl">
    <article class="bg-base-100 rounded-2xl shadow-xl overflow-hidden">
      <% if @fatwa.video? %>
        <div class="w-full bg-black">
          <video controls class="w-full max-h-[500px] mx-auto">
            <source src="<%= url_for(@fatwa.video) %>" type="<%= @fatwa.video.content_type %>">
            <%= t('common.browser_no_support_video') %>
          </video>
        </div>
      <% end %>

      <div class="p-8 lg:p-12">
        <header class="mb-10">
          <div class="flex flex-wrap items-center gap-3 mb-4">
            <% if @fatwa.scholar.present? %>
              <div class="flex items-center gap-2 text-base-content/70">
                <%= icon "user", class: "size-4" %>
                <span class="font-medium"><%= @fatwa.scholar.full_name %></span>
              </div>
            <% end %>
            <% if @fatwa.scholar.present? && @fatwa.category.present? %>
              <span class="text-base-content/30">|</span>
            <% end %>
            <% if @fatwa.category.present? %>
              <span class="badge badge-outline badge-lg">
                <%= @fatwa.category %>
              </span>
            <% end %>
          </div>
          <h1 class="text-3xl lg:text-4xl font-bold leading-tight">
            <%= @fatwa.title %>
          </h1>
        </header>

        <div class="bg-base-200 rounded-xl p-6 mb-10">
          <div class="flex flex-wrap items-center gap-4">
            <% if @fatwa.has_any_audio? %>
              <%= play_button(resource: @fatwa, klass: "btn btn-secondary btn-sm") %>
              <%= link_to direct_download_url(@fatwa.best_audio), download: true, target: "_blank", class: "btn btn-secondary btn-sm" do %>
                <%= icon "arrow-down-tray", class: "size-4" %>
              <% end %>
            <% end %>
            <button class="btn btn-secondary btn-sm"
                    data-controller="share-trigger"
                    data-share-trigger-modal-id-value="fatwa_share_modal"
                    data-action="click->share-trigger#open">
              <%= icon "share", class: "size-4" %>
            </button>
          </div>
        </div>

        <% if @fatwa.question.present? %>
          <section class="mb-10">
            <h2 class="text-xl lg:text-2xl font-bold mb-4">
              <%= t('.question') %>
            </h2>
            <div class="bg-base-200 rounded-xl p-6">
              <p class="text-lg leading-relaxed">
                <%= @fatwa.question %>
              </p>
            </div>
          </section>
        <% end %>

        <% if @fatwa.answer.present? %>
          <section class="mb-10">
            <h2 class="text-xl lg:text-2xl font-bold mb-4">
              <%= t('.answer') %>
            </h2>
            <div class="bg-base-200 rounded-xl p-6">
              <div class="prose prose-lg max-w-none">
                <%= @fatwa.answer %>
              </div>
            </div>
          </section>
        <% end %>

        <% if @fatwa.transcription_json.present? %>
          <section class="mb-10">
            <div class="collapse collapse-arrow collapse-open bg-base-200 rounded-xl">
              <input type="checkbox" checked />
              <div class="collapse-title text-xl font-bold flex items-center gap-3">
                <%= icon "document-text", class: "size-5" %>
                <%= t('.transcription') %>
              </div>
              <div class="collapse-content">
                <p class="text-sm text-base-content/60 italic mb-4">
                  <%= t('common.ai_transcript_disclaimer') %>
                </p>
                <div class="bg-base-100 rounded-lg p-6">
                  <% begin %>
                    <% transcription = JSON.parse(@fatwa.transcription_json) %>
                    <p class="whitespace-pre-wrap leading-relaxed"><%= transcription['text'] %></p>
                  <% rescue JSON::ParserError => e %>
                    <p class="text-error">Error parsing transcription: <%= e.message %></p>
                  <% end %>
                </div>
              </div>
            </div>
          </section>
        <% end %>

      </div>
    </article>
  </div>
</div>

<%= render 'shared/share_modal',
    modal_id: 'fatwa_share_modal',
    url: request.original_url,
    title: html_escape(@fatwa.title),
    text: html_escape(@fatwa.title) %>
