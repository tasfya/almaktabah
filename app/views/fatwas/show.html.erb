<div class="bg-background-subtle min-h-screen py-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 gap-8">
      <div class="lg:col-span-2">
        <article class="bg-background rounded-lg shadow-md p-8">
          <header class="mb-8">
            <h1 class="text-3xl font-bold text-foreground mb-4">
              <%= @fatwa.title %>
            </h1>
            <div class="flex flex-wrap items-center gap-4 text-sm text-foreground mb-6">
              <% if @fatwa.category.present? %>
                <span class="badge badge-primary rounded-full"> 
                  <%= @fatwa.category %>
                </span>
              <% end %>
            </div>
          </header>
          <% if @fatwa.question.present? %>
            <section class="mb-8">
              <h2 class="text-2xl font-bold text-foreground mb-4">
                <%= t('.question') %>
              </h2>
              <div class="prose prose-lg max-w-none p-6 rounded-lg border-r-4 border-primary-500 text-foreground"> <%# Added border-primary-500 and text-foreground %>
                <%= @fatwa.question %>
              </div>
            </section>
          <% end %>
          <% if @fatwa.answer.present? %>
            <section class="mb-8">
              <h2 class="text-2xl font-bold text-foreground mb-4">
                <%= t('.answer') %>
              </h2>
              <div class="prose prose-lg max-w-none p-6 rounded-lg border-r-4 border-secondary-500 text-foreground"> <%# Added border-secondary-500 and text-foreground %>
                <%= @fatwa.answer %>
              </div>
            </section>
          <% elsif @fatwa.content.present? %>
            <section class="mb-8">
              <div class="prose prose-lg max-w-none text-foreground">
                <%= @fatwa.content %>
              </div>
            </section>
          <% end %>
          <section class="mb-8">
            <div class="border-t border-background-subtle pt-6">
              <h3 class="text-lg font-semibold text-foreground mb-4">
                <%= t('.share_fatwa') %>
              </h3>
              <div class="flex items-center gap-4">
                <a href="https://twitter.com/intent/tweet?text=<%= CGI.escape(@fatwa.title) %>&url=<%= CGI.escape(request.original_url) %>"
                   target="_blank" rel="noopener" class="btn btn-primary">
                  <%= icon "twitter", library: "lucide", class: "size-4"%>
                  <%= t('buttons.share_on_twitter') %>
                </a>
                <button data-controller="clipboard"
                        data-clipboard-text-value="<%= request.original_url %>"
                        data-clipboard-success-message-value="<%= t('common.copy_success') %>"
                        data-clipboard-error-message-value="<%= t('common.copy_error') %>"
                        data-action="click->clipboard#copy"
                        class="btn btn-secondary"> 
                  <%= icon "clipboard", class: "size-4" %> 
                  <%= t('buttons.copy_link') %>
                </button>
              </div>
            </div>
          </section>
          <section class="mt-12">
            <h2 class="text-2xl font-bold text-foreground mb-6">
              <%= t('.related_fatwas') %>
            </h2>
            <% related_fatwas = Fatwa.where(category: @fatwa.category).where.not(id: @fatwa.id).order(created_at: :desc).limit(4) %>
            <% if related_fatwas.any? %>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <% related_fatwas.each do |related_fatwa| %>
                  <div class="bg-background border border-background-subtle rounded-lg p-6 hover:shadow-md transition-shadow">
                    <h3 class="text-lg font-semibold text-foreground mb-3">
                      <%= link_to related_fatwa.title, fatwa_path(related_fatwa), class: "hover:text-primary-500" %>
                    </h3>
                    <% if related_fatwa.question.present? %>
                      <p class="text-foreground text-sm mb-4">
                        <%= truncate(strip_tags(related_fatwa.question.to_s), length: 100) %>
                      </p>
                    <% end %>
                    <div class="flex items-center justify-between text-sm text-foreground">
                      <span class="bg-background-subtle px-2 py-1 rounded text-foreground"><%= related_fatwa.category %></span>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center text-foreground py-8">
                <p><%= t('.no_related_fatwas') %></p>
              </div>
            <% end %>
          </section>
        </article>
      </div>
      <div class="lg:col-span-1 space-y-6">
        <div class="bg-background rounded-lg shadow-md p-6">
          <h3 class="text-lg font-semibold text-foreground mb-4"><%= t('.related_fatwas') %></h3>
          <div class="space-y-4">
            <% Fatwa.where.not(id: @fatwa.id).limit(5).each do |related_fatwa| %>
              <%= link_to fatwa_path(related_fatwa), class: "block p-3 bg-background-subtle rounded-lg hover:bg-background transition-colors" do %>
                <h4 class="font-medium text-foreground line-clamp-2 text-sm">
                  <%= related_fatwa.title || t('fatwa.title') %>
                </h4>
                <% if related_fatwa.category.present? %>
                  <p class="text-xs text-foreground mt-1"><%= related_fatwa.category %></p>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>