<%= link_to book_path(book.author, book), class: "card card-border bg-base-100 shadow-sm hover:shadow-md transition-shadow" do %>
  <% if book.cover_image.present? %>
    <figure>
      <%= image_tag book.cover_image, class: "w-full h-48 object-cover rounded" %>
    </figure>
  <% end %>
  <div class="card-body">
    <h3 class="card-title break-words">
      <%= book.title %>
    </h3>
    <% if book.author.present? %>
      <p class="text-sm"><%= book.author.name %></p>
    <% end %>
    <p class="text-sm"><%= truncate(book.description, length: 100) %></p>
    <div class="card-actions justify-between">
      <span class="badge badge-primary"><%= book.category %></span>
    </div>
  </div>
<% end %>
