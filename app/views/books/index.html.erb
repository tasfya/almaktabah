<% content_for :title, t('navigation.books') %>
<div class="min-h-screen py-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 gap-8">
      <div class="lg:col-span-2">
        <div class="border border-background-contrast rounded-lg shadow-md p-6">
          <h1 class="text-2xl font-bold mb-6">
            <%= t('.title') %>
          </h1>
          <p class="mb-6">
            <%= t('.description') %>
          </p>
          <%= render 'shared/filters' %>
          <% if @books.any? %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              <% @books.each do |book| %>
                <%= render partial: "book_card", locals: { book: } %>
              <% end %>
            </div>
          <% else %>
            <div class="text-center text-foreground py-8">
              <%= t('.no_books') %>
            </div>
          <% end %>
          <%= render 'shared/pagination' %>
        </div>
      </div>
    </div>
  </div>
</div>