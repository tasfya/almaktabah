<div class="min-h-screen bg-base-100 p-8">
  <div class="max-w-6xl mx-auto">
    <h1 class="text-3xl font-bold mb-8 text-center">ملعب أزرار DaisyUI</h1>
    <!-- Base Colors -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">ألوان الأساس</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="bg-base-100 p-4 border border-base-300 rounded-box">
          <p class="text-base-content">base-100</p>
        </div>
        <div class="bg-base-200 p-4 border border-base-300 rounded-box">
          <p class="text-base-content">base-200</p>
        </div>
        <div class="bg-base-300 p-4 border border-base-300 rounded-box">
          <p class="text-base-content">base-300</p>
        </div>
        <div class="bg-primary p-4 rounded-box">
          <p class="text-primary-content">primary</p>
        </div>
        <div class="bg-secondary p-4 rounded-box">
          <p class="text-secondary-content">secondary</p>
        </div>
        <div class="bg-accent p-4 rounded-box">
          <p class="text-accent-content">accent</p>
        </div>
        <div class="bg-neutral p-4 rounded-box">
          <p class="text-neutral-content">neutral</p>
        </div>
        <div class="bg-info p-4 rounded-box">
          <p class="text-info-content">info</p>
        </div>
        <div class="bg-success p-4 rounded-box">
          <p class="text-success-content">success</p>
        </div>
        <div class="bg-warning p-4 rounded-box">
          <p class="text-warning-content">warning</p>
        </div>
        <div class="bg-error p-4 rounded-box">
          <p class="text-error-content">error</p>
        </div>
      </div>
    </section>
    <!-- Default Buttons -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">الأزرار الافتراضية</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <button class="btn">افتراضي</button>
        <button class="btn btn-primary">أساسي</button>
        <button class="btn btn-secondary">ثانوي</button>
        <button class="btn btn-accent">لهجة</button>
        <button class="btn btn-info">معلومات</button>
        <button class="btn btn-success">نجاح</button>
        <button class="btn btn-warning">تحذير</button>
        <button class="btn btn-error">خطأ</button>
        <button class="btn btn-neutral">محايد</button>
      </div>
    </section>
    <!-- Outline Buttons -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">أزرار المخطط</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <button class="btn btn-outline">مخطط</button>
        <button class="btn btn-outline btn-primary">أساسي</button>
        <button class="btn btn-outline btn-secondary">ثانوي</button>
        <button class="btn btn-outline btn-accent">لهجة</button>
        <button class="btn btn-outline btn-info">معلومات</button>
        <button class="btn btn-outline btn-success">نجاح</button>
        <button class="btn btn-outline btn-warning">تحذير</button>
        <button class="btn btn-outline btn-error">خطأ</button>
      </div>
    </section>
    <!-- Ghost Buttons -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">أزرار الشبح</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <button class="btn btn-ghost">شبح</button>
        <button class="btn btn-ghost btn-primary">أساسي</button>
        <button class="btn btn-ghost btn-secondary">ثانوي</button>
        <button class="btn btn-ghost btn-accent">لهجة</button>
        <button class="btn btn-ghost btn-info">معلومات</button>
        <button class="btn btn-ghost btn-success">نجاح</button>
        <button class="btn btn-ghost btn-warning">تحذير</button>
        <button class="btn btn-ghost btn-error">خطأ</button>
      </div>
    </section>
    <!-- Button Sizes -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">أحجام الأزرار</h2>
      <div class="flex flex-wrap gap-4 items-center">
        <button class="btn btn-xs">صغير جداً</button>
        <button class="btn btn-sm">صغير</button>
        <button class="btn btn-md">متوسط</button>
        <button class="btn btn-lg">كبير</button>
      </div>
    </section>
    <!-- Button States -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">حالات الأزرار</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <h3 class="text-lg font-medium mb-2">معطل</h3>
          <div class="flex gap-4">
            <button class="btn" disabled>معطل</button>
            <button class="btn btn-primary" disabled>أساسي معطل</button>
          </div>
        </div>
        <div>
          <h3 class="text-lg font-medium mb-2">جاري التحميل</h3>
          <div class="flex gap-4">
            <button class="btn loading">جاري التحميل</button>
            <button class="btn btn-primary loading">أساسي جاري التحميل</button>
          </div>
        </div>
      </div>
    </section>
    <!-- Button with Icons -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">الأزرار مع الأيقونات</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <button class="btn">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
          </svg>
          أعجبني
        </button>
        <button class="btn btn-primary">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          إضافة
        </button>
        <button class="btn btn-secondary">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
          عرض
        </button>
        <button class="btn btn-accent">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
          دردشة
        </button>
      </div>
    </section>
    <!-- Badges -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">الشارات</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <span class="badge">افتراضي</span>
        <span class="badge badge-primary">أساسي</span>
        <span class="badge badge-secondary">ثانوي</span>
        <span class="badge badge-accent">لهجة</span>
        <span class="badge badge-info">معلومات</span>
        <span class="badge badge-success">نجاح</span>
        <span class="badge badge-warning">تحذير</span>
        <span class="badge badge-error">خطأ</span>
        <span class="badge badge-neutral">محايد</span>
      </div>
    </section>
    <!-- Outline Badges -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">شارات المخطط</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <span class="badge badge-outline">مخطط</span>
        <span class="badge badge-outline badge-primary">أساسي</span>
        <span class="badge badge-outline badge-secondary">ثانوي</span>
        <span class="badge badge-outline badge-accent">لهجة</span>
        <span class="badge badge-outline badge-info">معلومات</span>
        <span class="badge badge-outline badge-success">نجاح</span>
        <span class="badge badge-outline badge-warning">تحذير</span>
        <span class="badge badge-outline badge-error">خطأ</span>
      </div>
    </section>
    <!-- Soft Badges -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">الشارات الناعمة</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <span class="badge badge-soft">ناعم</span>
        <span class="badge badge-soft badge-primary">أساسي</span>
        <span class="badge badge-soft badge-secondary">ثانوي</span>
        <span class="badge badge-soft badge-accent">لهجة</span>
        <span class="badge badge-soft badge-info">معلومات</span>
        <span class="badge badge-soft badge-success">نجاح</span>
        <span class="badge badge-soft badge-warning">تحذير</span>
        <span class="badge badge-soft badge-error">خطأ</span>
      </div>
    </section>
    <!-- Badge Sizes -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">أحجام الشارات</h2>
      <div class="flex flex-wrap gap-4 items-center">
        <span class="badge badge-xs">صغير جداً</span>
        <span class="badge badge-sm">صغير</span>
        <span class="badge badge-md">متوسط</span>
        <span class="badge badge-lg">كبير</span>
        <span class="badge badge-xl">كبير جداً</span>
      </div>
    </section>
    <!-- Cards -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">البطاقات</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <!-- Basic card with border -->
        <div class="card bg-base-100 card-border">
          <div class="card-body">
            <h2 class="card-title">عنوان البطاقة</h2>
            <p>نص وصفي للبطاقة يوضح محتواها.</p>
            <div class="card-actions justify-end">
              <button class="btn btn-primary">الإجراء</button>
            </div>
          </div>
        </div>
        <!-- Card with elevation -->
        <div class="card bg-base-100 shadow-sm">
          <div class="card-body">
            <h2 class="card-title">بطاقة مع ظل</h2>
            <p>هذه البطاقة لها ظل مرتفع للإشارة إلى الارتفاع.</p>
            <div class="card-actions justify-end">
              <button class="btn btn-primary">الإجراء</button>
            </div>
          </div>
        </div>
        <!-- Card with top image -->
        <div class="card bg-base-100 shadow-sm">
          <figure>
            <img src="<%= image_path('background.jpg') %>" alt="صورة البطاقة" class="w-full h-48 object-cover" />
          </figure>
          <div class="card-body">
            <h2 class="card-title">بطاقة مع صورة</h2>
            <p>بطاقة تحتوي على صورة في الأعلى.</p>
            <div class="card-actions justify-end">
              <button class="btn btn-primary">الإجراء</button>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
